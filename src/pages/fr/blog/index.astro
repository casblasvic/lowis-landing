---
/**
 * Blog Index - French (France)
 *
 * /fr/blog/ - Lists all blog posts in French (France version)
 */
import { getCollection } from 'astro:content';
import BlogLayout from '../../../layouts/BlogLayout.astro';
import CTABanner from '../../../components/blog/CTABanner.astro';
import { getBlogImageUrl } from '../../../lib/storage';

const lang = 'fr-FR';

/**
 * Resolve image path to full URL
 */
function resolveImageUrl(imagePath: string | undefined): string | undefined {
  if (!imagePath) return undefined;
  if (imagePath.startsWith('http') || imagePath.startsWith('/')) return imagePath;
  return getBlogImageUrl(imagePath);
}

function getSlugFromId(id: string): string {
  return id.replace(/^(fr|fr-FR)\//, '').replace(/\.md$/, '');
}

const allPosts = await getCollection('blog', ({ data }) => {
  return (data.lang === 'fr-FR' || data.lang === 'fr') && !data.draft;
});

const sortedPosts = allPosts.sort((a, b) =>
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Rotate featured article based on day of year (changes daily, deterministic)
const now = new Date();
const startOfYear = new Date(now.getFullYear(), 0, 0);
const dayOfYear = Math.floor((now.getTime() - startOfYear.getTime()) / (1000 * 60 * 60 * 24));
const featuredIndex = sortedPosts.length > 0 ? dayOfYear % sortedPosts.length : 0;

// Reorder posts: featured post first, then the rest in original order
const featuredPost = sortedPosts[featuredIndex];
const otherPosts = sortedPosts.filter((_, i) => i !== featuredIndex);
const posts = [featuredPost, ...otherPosts].filter(Boolean);

const categoryConfig: Record<string, { label: string; icon: string; color: string }> = {
  guides: { label: 'Guides', icon: 'menu_book', color: '#059669' },
  comparatifs: { label: 'Comparatifs', icon: 'compare', color: '#7C3AED' },
  astuces: { label: 'Astuces', icon: 'lightbulb', color: '#F59E0B' },
  recettes: { label: 'Recettes', icon: 'restaurant', color: '#EF4444' },
  temoignages: { label: 'Témoignages', icon: 'chat', color: '#3B82F6' },
  'bien-etre': { label: 'Bien-être', icon: 'self_improvement', color: '#10B981' },
  mindset: { label: 'Mindset', icon: 'psychology', color: '#8B5CF6' },
  'sante-femme': { label: 'Santé Femme', icon: 'female', color: '#EC4899' },
};

// Get unique categories from posts
const usedCategories = [...new Set(posts.map(p => p.data.category).filter(Boolean))] as string[];

const title = 'Blog LOWIS - Nutrition, Perte de Poids et Conseils IA';
const description = 'Découvrez nos guides complets sur la nutrition, la perte de poids et comment notre IA peut vous aider à atteindre vos objectifs.';
const keywords = 'nutrition france, perte de poids, compteur calories ia, régime, coach nutrition';
---

<BlogLayout title={title} description={description} keywords={keywords} lang={lang}>
  <section class="py-12 md:py-20" style="background: var(--blog-bg);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 tracking-tight" style="color: var(--blog-text);">
        Le Blog <span style="color: var(--blog-accent);">LOWIS</span>
      </h1>
      <p class="text-lg md:text-xl max-w-2xl mx-auto leading-relaxed" style="color: var(--blog-text-secondary);">
        Guides pratiques et conseils experts pour perdre du poids intelligemment avec l'aide de l'IA.
      </p>
    </div>
  </section>

  <!-- Category Filter Pills - Horizontal scroll on mobile -->
  {usedCategories.length > 1 && (
    <section class="pb-8" style="background: var(--blog-bg);">
      <div class="max-w-6xl mx-auto">
        <div class="category-scroll-container overflow-x-auto scrollbar-hide px-4 sm:px-6 lg:px-8">
          <div class="flex items-center gap-2 md:gap-3 md:justify-center min-w-max md:min-w-0">
            <a href="/fr/blog/" class="category-pill active inline-flex items-center gap-1.5 px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 whitespace-nowrap">
              <span class="material-symbols-outlined text-base">apps</span>
              Tous
            </a>
            {usedCategories.map((cat) => {
              const config = categoryConfig[cat];
              if (!config) return null;
              return (
                <a href={`/fr/blog/category/${cat}/`} data-category={cat} class="category-pill inline-flex items-center gap-1.5 px-4 py-2 rounded-full text-sm font-medium transition-all duration-200 whitespace-nowrap">
                  <span class="material-symbols-outlined text-base">{config.icon}</span>
                  {config.label}
                </a>
              );
            })}
          </div>
        </div>
      </div>
    </section>
  )}

  <section class="pb-16 md:pb-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      {posts.length > 0 ? (
        <>
          {posts[0] && (
            <a href={`/fr/blog/${getSlugFromId(posts[0].id)}/`} class="group block mb-16">
              <article class="relative overflow-hidden rounded-2xl" style="background: var(--blog-surface); border: 1px solid var(--blog-border);">
                <div class="grid md:grid-cols-2 gap-0">
                  <div class="relative aspect-[4/3] md:aspect-auto overflow-hidden">
                    {posts[0].data.image ? (
                      <img src={resolveImageUrl(posts[0].data.image)} alt={posts[0].data.imageAlt || posts[0].data.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
                    ) : (
                      <div class="w-full h-full flex items-center justify-center" style="background: linear-gradient(135deg, var(--blog-accent), #DC2626);">
                        <span class="material-symbols-outlined text-white" style="font-size: 5rem; opacity: 0.3;">article</span>
                      </div>
                    )}
                    {posts[0].data.category && categoryConfig[posts[0].data.category] && (
                      <span class="absolute top-4 left-4 inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-semibold text-white" style="background: rgba(0,0,0,0.6); backdrop-filter: blur(4px);">
                        <span class="material-symbols-outlined text-sm">{categoryConfig[posts[0].data.category].icon}</span>
                        {categoryConfig[posts[0].data.category].label}
                      </span>
                    )}
                  </div>
                  <div class="p-8 md:p-10 lg:p-12 flex flex-col justify-center">
                    <div class="flex items-center gap-3 mb-4">
                      <span class="text-xs font-semibold uppercase tracking-wider px-2 py-1 rounded" style="color: var(--blog-accent); background: var(--blog-accent-light);">Article à la une</span>
                      {posts[0].data.readingTime && (
                        <span class="text-sm" style="color: var(--blog-text-muted);">{posts[0].data.readingTime} min de lecture</span>
                      )}
                    </div>
                    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 leading-tight group-hover:text-[var(--blog-accent)] transition-colors" style="color: var(--blog-text);">{posts[0].data.title}</h2>
                    <p class="text-base md:text-lg leading-relaxed mb-6" style="color: var(--blog-text-secondary);">{posts[0].data.description}</p>
                    <div class="flex items-center gap-2 font-medium" style="color: var(--blog-accent);">
                      Lire l'article
                      <span class="material-symbols-outlined text-lg transition-transform group-hover:translate-x-1">arrow_forward</span>
                    </div>
                  </div>
                </div>
              </article>
            </a>
          )}

          <div class="mb-16"><CTABanner lang={lang} type="plan" variant="subtle" /></div>

          {posts.length > 1 && (
            <div>
              <h2 class="text-sm font-semibold uppercase tracking-wider mb-8" style="color: var(--blog-text-muted);">Tous les articles</h2>
              <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                {posts.slice(1).map((post) => {
                  const cat = post.data.category ? categoryConfig[post.data.category] : null;
                  return (
                    <a href={`/fr/blog/${getSlugFromId(post.id)}/`} class="group block">
                      <article class="h-full rounded-xl overflow-hidden transition-all duration-300 group-hover:shadow-lg group-hover:-translate-y-1" style="background: var(--blog-surface); border: 1px solid var(--blog-border);">
                        <div class="relative aspect-[16/10] overflow-hidden">
                          {post.data.image ? (
                            <img src={resolveImageUrl(post.data.image)} alt={post.data.imageAlt || post.data.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" loading="lazy" />
                          ) : (
                            <div class="w-full h-full flex items-center justify-center" style="background: linear-gradient(135deg, var(--blog-accent-light), var(--blog-surface));">
                              <span class="material-symbols-outlined" style="font-size: 3rem; color: var(--blog-accent); opacity: 0.5;">article</span>
                            </div>
                          )}
                          {cat && (
                            <span class="absolute top-3 left-3 inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium text-white" style="background: rgba(0,0,0,0.6); backdrop-filter: blur(4px);">
                              <span class="material-symbols-outlined text-xs">{cat.icon}</span>
                              {cat.label}
                            </span>
                          )}
                        </div>
                        <div class="p-5">
                          <h3 class="font-bold text-lg mb-2 leading-snug group-hover:text-[var(--blog-accent)] transition-colors line-clamp-2" style="color: var(--blog-text);">{post.data.title}</h3>
                          <p class="text-sm leading-relaxed line-clamp-2" style="color: var(--blog-text-secondary);">{post.data.description}</p>
                        </div>
                      </article>
                    </a>
                  );
                })}
              </div>
            </div>
          )}
        </>
      ) : (
        <div class="text-center py-20">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full mb-6" style="background: var(--blog-accent-light);">
            <span class="material-symbols-outlined text-4xl" style="color: var(--blog-accent);">edit_note</span>
          </div>
          <h2 class="text-2xl font-bold mb-3" style="color: var(--blog-text);">Bientôt disponible</h2>
          <p class="mb-8 max-w-md mx-auto" style="color: var(--blog-text-secondary);">Nos premiers articles arrivent très prochainement.</p>
          <a href="/fr/" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold text-white transition-transform hover:scale-105" style="background: var(--blog-accent);">
            Découvrir LOWIS
            <span class="material-symbols-outlined">arrow_forward</span>
          </a>
        </div>
      )}
    </div>
  </section>

  <section class="py-16" style="background: var(--blog-surface);">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <CTABanner lang={lang} type="trial" variant="gradient" />
    </div>
  </section>
</BlogLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Horizontal scroll container - hide scrollbar */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }

  /* Category pill styles */
  .category-pill {
    background: var(--blog-surface);
    border: 1px solid var(--blog-border);
    color: var(--blog-text-secondary);
    cursor: pointer;
    flex-shrink: 0;
  }
  .category-pill:hover {
    border-color: var(--blog-accent);
    color: var(--blog-accent);
  }
  .category-pill.active {
    background: var(--blog-accent);
    border-color: var(--blog-accent);
    color: white;
  }
</style>
