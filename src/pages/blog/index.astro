---
/**
 * Blog Index - French (Morocco) - Default
 *
 * /blog/ - Lists all blog posts in French
 * Modern, professional design inspired by top publication blogs
 */
import { getCollection } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';
import CTABanner from '../../components/blog/CTABanner.astro';
import { getBlogImageUrl } from '../../lib/storage';

const lang = 'fr';

/**
 * Resolve image path to full URL
 */
function resolveImageUrl(imagePath: string | undefined): string | undefined {
  if (!imagePath) return undefined;
  if (imagePath.startsWith('http') || imagePath.startsWith('/')) return imagePath;
  return getBlogImageUrl(imagePath);
}

// Helper to extract slug from post id (e.g., "fr/lowis-vs-cal-ai" -> "lowis-vs-cal-ai")
function getSlugFromId(id: string): string {
  return id.replace(/^fr\//, '').replace(/\.md$/, '');
}

// Get all French blog posts, exclude drafts
const allPosts = await getCollection('blog', ({ data }) => {
  return data.lang === lang && !data.draft;
});

// Sort by publish date (newest first)
const posts = allPosts.sort((a, b) =>
  b.data.publishDate.getTime() - a.data.publishDate.getTime()
);

// Category config with icons
const categoryConfig: Record<string, { label: string; icon: string }> = {
  guides: { label: 'Guide', icon: 'menu_book' },
  comparatifs: { label: 'Comparatif', icon: 'compare' },
  astuces: { label: 'Astuces', icon: 'lightbulb' },
  recettes: { label: 'Recettes', icon: 'restaurant' },
  temoignages: { label: 'Témoignage', icon: 'chat' },
};

// SEO metadata
const title = 'Blog LOWIS - Nutrition, Perte de Poids et Conseils IA';
const description = 'Découvrez nos guides complets sur la nutrition, la perte de poids et comment notre IA peut vous aider à atteindre vos objectifs. Conseils adaptés au Maroc.';
const keywords = 'nutrition maroc, perte de poids, compteur calories ia, régime marocain, coach nutrition';
---

<BlogLayout
  title={title}
  description={description}
  keywords={keywords}
  lang={lang}
>
  <!-- Hero Section - Minimal and clean -->
  <section class="py-12 md:py-20" style="background: var(--blog-bg);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 tracking-tight" style="color: var(--blog-text);">
        Le Blog <span style="color: var(--blog-accent);">LOWIS</span>
      </h1>
      <p class="text-lg md:text-xl max-w-2xl mx-auto leading-relaxed" style="color: var(--blog-text-secondary);">
        Guides pratiques et conseils experts pour perdre du poids intelligemment avec l'aide de l'IA.
      </p>
    </div>
  </section>

  <!-- Posts Section -->
  <section class="pb-16 md:pb-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      {posts.length > 0 ? (
        <>
          <!-- Featured Post - Full width hero card -->
          {posts[0] && (
            <a
              href={`/blog/${getSlugFromId(posts[0].id)}/`}
              class="group block mb-16"
            >
              <article class="relative overflow-hidden rounded-2xl" style="background: var(--blog-surface); border: 1px solid var(--blog-border);">
                <div class="grid md:grid-cols-2 gap-0">
                  <!-- Image -->
                  <div class="relative aspect-[4/3] md:aspect-auto overflow-hidden">
                    {posts[0].data.image ? (
                      <img
                        src={resolveImageUrl(posts[0].data.image)}
                        alt={posts[0].data.imageAlt || posts[0].data.title}
                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                      />
                    ) : (
                      <div class="w-full h-full flex items-center justify-center" style="background: linear-gradient(135deg, var(--blog-accent), #DC2626);">
                        <span class="material-symbols-outlined text-white" style="font-size: 5rem; opacity: 0.3;">article</span>
                      </div>
                    )}
                    <!-- Category badge on image -->
                    {posts[0].data.category && categoryConfig[posts[0].data.category] && (
                      <span class="absolute top-4 left-4 inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-semibold text-white" style="background: rgba(0,0,0,0.6); backdrop-filter: blur(4px);">
                        <span class="material-symbols-outlined text-sm">{categoryConfig[posts[0].data.category].icon}</span>
                        {categoryConfig[posts[0].data.category].label}
                      </span>
                    )}
                  </div>

                  <!-- Content -->
                  <div class="p-8 md:p-10 lg:p-12 flex flex-col justify-center">
                    <span class="text-xs font-semibold uppercase tracking-wider mb-4" style="color: var(--blog-accent);">
                      Article à la une
                    </span>
                    <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-4 leading-tight group-hover:text-[var(--blog-accent)] transition-colors" style="color: var(--blog-text);">
                      {posts[0].data.title}
                    </h2>
                    <p class="text-base md:text-lg leading-relaxed mb-6" style="color: var(--blog-text-secondary);">
                      {posts[0].data.description}
                    </p>
                    <div class="flex items-center gap-2 font-medium" style="color: var(--blog-accent);">
                      Lire l'article
                      <span class="material-symbols-outlined text-lg transition-transform group-hover:translate-x-1">arrow_forward</span>
                    </div>
                  </div>
                </div>
              </article>
            </a>
          )}

          <!-- CTA Banner -->
          <div class="mb-16">
            <CTABanner lang={lang} type="plan" variant="subtle" />
          </div>

          <!-- Other Posts Grid -->
          {posts.length > 1 && (
            <div>
              <h2 class="text-sm font-semibold uppercase tracking-wider mb-8" style="color: var(--blog-text-muted);">
                Tous les articles
              </h2>
              <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                {posts.slice(1).map((post) => {
                  const cat = post.data.category ? categoryConfig[post.data.category] : null;
                  return (
                    <a
                      href={`/blog/${getSlugFromId(post.id)}/`}
                      class="group block"
                    >
                      <article class="h-full rounded-xl overflow-hidden transition-all duration-300 group-hover:shadow-lg group-hover:-translate-y-1" style="background: var(--blog-surface); border: 1px solid var(--blog-border);">
                        <!-- Image -->
                        <div class="relative aspect-[16/10] overflow-hidden">
                          {post.data.image ? (
                            <img
                              src={resolveImageUrl(post.data.image)}
                              alt={post.data.imageAlt || post.data.title}
                              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                              loading="lazy"
                            />
                          ) : (
                            <div class="w-full h-full flex items-center justify-center" style="background: linear-gradient(135deg, var(--blog-accent-light), var(--blog-surface));">
                              <span class="material-symbols-outlined" style="font-size: 3rem; color: var(--blog-accent); opacity: 0.5;">article</span>
                            </div>
                          )}
                          <!-- Category badge -->
                          {cat && (
                            <span class="absolute top-3 left-3 inline-flex items-center gap-1 px-2.5 py-1 rounded-full text-xs font-medium text-white" style="background: rgba(0,0,0,0.6); backdrop-filter: blur(4px);">
                              <span class="material-symbols-outlined text-xs">{cat.icon}</span>
                              {cat.label}
                            </span>
                          )}
                        </div>

                        <!-- Content -->
                        <div class="p-5">
                          <h3 class="font-bold text-lg mb-2 leading-snug group-hover:text-[var(--blog-accent)] transition-colors line-clamp-2" style="color: var(--blog-text);">
                            {post.data.title}
                          </h3>
                          <p class="text-sm leading-relaxed line-clamp-2" style="color: var(--blog-text-secondary);">
                            {post.data.description}
                          </p>
                        </div>
                      </article>
                    </a>
                  );
                })}
              </div>
            </div>
          )}
        </>
      ) : (
        <!-- Empty state -->
        <div class="text-center py-20">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full mb-6" style="background: var(--blog-accent-light);">
            <span class="material-symbols-outlined text-4xl" style="color: var(--blog-accent);">edit_note</span>
          </div>
          <h2 class="text-2xl font-bold mb-3" style="color: var(--blog-text);">
            Bientôt disponible
          </h2>
          <p class="mb-8 max-w-md mx-auto" style="color: var(--blog-text-secondary);">
            Nos premiers articles arrivent très prochainement. En attendant, découvrez LOWIS !
          </p>
          <a
            href="/"
            class="inline-flex items-center gap-2 px-6 py-3 rounded-xl font-semibold text-white transition-transform hover:scale-105"
            style="background: var(--blog-accent);"
          >
            Découvrir LOWIS
            <span class="material-symbols-outlined">arrow_forward</span>
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="py-16" style="background: var(--blog-surface);">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
      <CTABanner lang={lang} type="trial" variant="gradient" />
    </div>
  </section>
</BlogLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
