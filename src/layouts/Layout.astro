---
import '../styles/global.css';
import { type Language, defaultLang, getAlternateUrls } from '../i18n';
import { SITE_CONFIG, getSignupUrlWithLang } from '../config';
import GeoBanner from '../components/GeoBanner.astro';
import CookieConsent from '../components/CookieConsent.astro';

interface Props {
  title: string;
  description: string;
  keywords?: string;
  lang?: Language;
  canonicalUrl?: string;
}

const { title, description, keywords, lang = defaultLang, canonicalUrl } = Astro.props;
const baseUrl = SITE_CONFIG.domain;
const alternateUrls = getAlternateUrls(Astro.url.pathname, baseUrl);

// Calcular canonical URL automáticamente (con trailing slash para consistencia con sitemap)
const pathname = Astro.url.pathname.endsWith('/') ? Astro.url.pathname : `${Astro.url.pathname}/`;
const computedCanonicalUrl = canonicalUrl || `${baseUrl}${pathname === '/' ? '' : pathname}`;

// Mapeo de locales completos para Open Graph
const localeMap: Record<Language, string> = {
  en: 'en_US',
  es: 'es_ES',
  fr: 'fr_MA',
  'fr-FR': 'fr_FR'
};

// Mapeo para atributo lang del HTML (BCP 47)
const htmlLangMap: Record<Language, string> = {
  en: 'en',
  es: 'es',
  fr: 'fr-MA',
  'fr-FR': 'fr-FR'
};

const htmlLang = htmlLangMap[lang] || lang;
---

<!doctype html>
<html lang={htmlLang} class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="robots" content="index, follow" />
    <meta name="author" content="LOWIS" />
    <meta name="theme-color" content="#F97316" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/icons/logo-192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl || Astro.url.href} />
    <meta property="og:image" content={`${baseUrl}/og-image.png`} />
    <meta property="og:locale" content={localeMap[lang]} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${baseUrl}/og-image.png`} />

    <!-- Canonical & Alternates -->
    <link rel="canonical" href={computedCanonicalUrl} />
    {alternateUrls.map(({ hreflang, href }) => (
      <link rel="alternate" hreflang={hreflang} href={href} />
    ))}
    <link rel="alternate" hreflang="x-default" href={baseUrl} />

    <!-- Google Fonts - Non-render-blocking with preload -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <!-- Material Symbols - Async loading -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&display=swap" rel="stylesheet" />
    </noscript>

    <!-- Inter Font - Async loading (only weights actually used: 400,500,600,700,800) -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    </noscript>

    <title>{title}</title>

    <!-- Google Analytics 4 - Loaded conditionally based on consent -->
    <script is:inline>
      // Initialize dataLayer for GA
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}

      // Flag to prevent double loading
      window.lowisGALoaded = false;

      // Function to load GA script and configure
      function loadGoogleAnalytics() {
        if (window.lowisGALoaded) return;
        window.lowisGALoaded = true;

        // Load the GA script
        var script = document.createElement('script');
        script.async = true;
        script.src = 'https://www.googletagmanager.com/gtag/js?id=G-52G0810T4P';
        document.head.appendChild(script);

        // Configure GA
        gtag('js', new Date());
        gtag('config', 'G-52G0810T4P', {
          'anonymize_ip': true // Extra privacy measure
        });
      }

      // Listen for consent event from CookieConsent component
      window.addEventListener('lowis-consent-changed', function(e) {
        if (e.detail && e.detail.analytics) {
          loadGoogleAnalytics();
        }
      });
    </script>

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "SoftwareApplication",
          "name": "LOWIS",
          "applicationCategory": "HealthApplication",
          "operatingSystem": "Web",
          "inLanguage": ["fr", "en", "es"],
          "areaServed": {
            "@type": "Country",
            "name": "Morocco"
          },
          "offers": {
            "@type": "Offer",
            "price": "199",
            "priceCurrency": "MAD",
            "description": "7-day free trial, then 199 DH/week"
          },
          "aggregateRating": {
            "@type": "AggregateRating",
            "ratingValue": "4.8",
            "ratingCount": "1250"
          }
        },
        {
          "@type": "Organization",
          "name": "LOWIS",
          "url": "https://lowis.app",
          "logo": "https://lowis.app/icons/logo-512.png",
          "areaServed": {
            "@type": "Country",
            "name": "Morocco"
          },
          "address": {
            "@type": "PostalAddress",
            "addressCountry": "MA"
          }
        },
        {
          "@type": "FAQPage",
          "mainEntity": [
            {
              "@type": "Question",
              "name": "Comment fonctionne LOWIS pour la cuisine marocaine?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "LOWIS est votre coach IA personnel qui surveille 40+ indicateurs. Plus de 500 recettes marocaines: tajines, brochettes, poisson grillé, méchoui. Conçu pour la cuisine marocaine, pas adapté après coup."
              }
            },
            {
              "@type": "Question",
              "name": "Perdre entre 1 et 2,5 kg par semaine au Maroc, c'est possible?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Oui, c'est notre objectif garanti. En mangeant intelligemment avec vos recettes marocaines préférées (pas moins, juste mieux combiné), la majorité de nos utilisateurs atteignent ces résultats."
              }
            },
            {
              "@type": "Question",
              "name": "Comment LOWIS s'adapte pendant le Ramadan?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Plans spéciaux optimisés pour le jeûne: répartition idéale ftour/shour, hydratation adaptée, et recommandations pour maintenir votre énergie pendant le mois sacré."
              }
            },
            {
              "@type": "Question",
              "name": "Combien coûte LOWIS au Maroc?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Première semaine offerte sans carte bancaire. Puis 199 DH/semaine. Annulation en 1 clic à tout moment."
              }
            },
            {
              "@type": "Question",
              "name": "Quelle est la différence entre LOWIS et les compteurs de calories?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Les compteurs de calories vous laissent seul avec des chiffres. LOWIS surveille +40 indicateurs (sommeil, stress, cycle, digestion...), s'adapte instantanément comme un coach personnel, et nos nutritionnistes ajustent votre plan chaque semaine."
              }
            }
          ]
        }
      ]
    })} />
  </head>
  <body class="bg-dark-bg text-white font-sans antialiased pb-20 md:pb-0">
    <!-- Geo-detection banner -->
    <GeoBanner />

    <!-- Cookie consent banner (only shown for EU/EEA countries) -->
    <CookieConsent lang={lang} />

    <slot />

    <!-- Sticky CTA for mobile - Always visible -->
    <div id="sticky-cta" class="fixed bottom-0 left-0 right-0 z-50 p-3 bg-dark-bg/95 backdrop-blur-lg border-t border-dark-border md:hidden">
      <a href={getSignupUrlWithLang(lang)} class="btn-primary w-full justify-center text-base py-3">
        {lang === 'fr' ? 'Obtenir mon plan personnalisé gratuit' : lang === 'es' ? 'Obtener mi plan personalizado gratis' : 'Get my free personalized plan'}
        <span class="material-symbols-outlined ml-2 text-lg">arrow_forward</span>
      </a>
    </div>

    <!-- Smooth scroll polyfill for Safari -->
    <script>
      // Check if smooth scroll is supported
      if (!('scrollBehavior' in document.documentElement.style)) {
        // Polyfill would be loaded here if needed
      }
    </script>
  </body>
</html>

<style is:global>
  /* Custom scrollbar for dark theme */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #1a1a1a;
  }

  ::-webkit-scrollbar-thumb {
    background: #3a3a3a;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #4a4a4a;
  }

  /* Selection color */
  ::selection {
    background: rgba(249, 115, 22, 0.3);
    color: white;
  }
</style>
