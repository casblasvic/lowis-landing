---
import '../styles/global.css';
import { type Language, defaultLang, getAlternateUrls } from '../i18n';
import { SITE_CONFIG, getSignupUrlWithLang } from '../config';
import GeoBanner from '../components/GeoBanner.astro';
import CookieConsent from '../components/CookieConsent.astro';

interface Props {
  title: string;
  description: string;
  keywords?: string;
  lang?: Language;
  canonicalUrl?: string;
}

const { title, description, keywords, lang = defaultLang, canonicalUrl } = Astro.props;
const baseUrl = SITE_CONFIG.domain;
const alternateUrls = getAlternateUrls(Astro.url.pathname, baseUrl);

// Calcular canonical URL automáticamente (con trailing slash para consistencia con sitemap)
const pathname = Astro.url.pathname.endsWith('/') ? Astro.url.pathname : `${Astro.url.pathname}/`;
const computedCanonicalUrl = canonicalUrl || `${baseUrl}${pathname === '/' ? '' : pathname}`;

// Mapeo de locales completos para Open Graph
const localeMap: Record<Language, string> = {
  en: 'en_US',
  es: 'es_ES',
  fr: 'fr_MA',
  'fr-FR': 'fr_FR'
};

// Mapeo para atributo lang del HTML (BCP 47)
const htmlLangMap: Record<Language, string> = {
  en: 'en',
  es: 'es',
  fr: 'fr-MA',
  'fr-FR': 'fr-FR'
};

const htmlLang = htmlLangMap[lang] || lang;
---

<!doctype html>
<html lang={htmlLang} class="dark scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Security: Content Security Policy (GitHub Pages doesn't support HTTP headers) -->
    <!-- Note: frame-ancestors removed - only works via HTTP header, not meta tag -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob: https: https://yjxnyjcaxehosndbyepg.supabase.co https://www.google-analytics.com https://www.googletagmanager.com; connect-src 'self' https://yjxnyjcaxehosndbyepg.supabase.co https://ipwho.is https://www.google-analytics.com https://www.googletagmanager.com https://region1.google-analytics.com https://analytics.google.com; frame-src 'self'; base-uri 'self'; form-action 'self' https://app.lowis.app; object-src 'none'; upgrade-insecure-requests" />

    <meta name="description" content={description} />
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="robots" content="index, follow" />
    <meta name="author" content="LOWIS" />
    <meta name="theme-color" content="#F97316" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/icons/favicon-32.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/icons/logo-192.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl || Astro.url.href} />
    <meta property="og:image" content={`${baseUrl}/og-image.png`} />
    <meta property="og:locale" content={localeMap[lang]} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${baseUrl}/og-image.png`} />

    <!-- Canonical & Alternates -->
    <link rel="canonical" href={computedCanonicalUrl} />
    {alternateUrls.map(({ hreflang, href }) => (
      <link rel="alternate" hreflang={hreflang} href={href} />
    ))}
    <link rel="alternate" hreflang="x-default" href={baseUrl} />

    <!-- Preconnect to third-party origins -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://yjxnyjcaxehosndbyepg.supabase.co" crossorigin />
    <link rel="preconnect" href="https://ipwho.is" crossorigin />
    <link rel="dns-prefetch" href="https://ipwho.is" />
    <!-- Note: gtag dns-prefetch removed - GA4 is deferred 2.5s after load for better LCP -->

    <!-- Preload critical images for LCP -->
    <link rel="preload" as="image" href="/icons/logo-48.webp" fetchpriority="high" />

    <!-- Material Symbols - Async loading with lower priority (icons are secondary to text) -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
      fetchpriority="low"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&display=swap" rel="stylesheet" />
    </noscript>

    <!-- Inter Font - Async loading with high priority (critical for text/LCP) -->
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      onload="this.onload=null;this.rel='stylesheet'"
      fetchpriority="high"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    </noscript>

    <title>{title}</title>

    <!-- Critical CSS - Inline for LCP optimization -->
    <style is:inline>
      /* Critical above-the-fold styles */
      :root{--color-primary-orange:#F97316;--color-primary-red:#DC2626;--color-dark-bg:#0F0F0F;--color-dark-surface:#1A1A1A;--color-dark-border:#2A2A2A;--color-text-primary:#FFFFFF;--color-text-secondary:#B3B3B3}
      html{scroll-behavior:smooth}
      body{background-color:var(--color-dark-bg);color:var(--color-text-primary);font-family:'Inter',system-ui,-apple-system,sans-serif;margin:0}
      .dark{color-scheme:dark}
      /* Header critical */
      header{position:sticky;top:0;z-index:50;background:rgba(15,15,15,.95);backdrop-filter:blur(12px)}
      /* Hero critical */
      .gradient-text{background:linear-gradient(135deg,var(--color-primary-orange),var(--color-primary-red));-webkit-background-clip:text;-webkit-text-fill-color:transparent;background-clip:text}
      .btn-primary{display:inline-flex;align-items:center;justify-content:center;padding:.75rem 1.5rem;border-radius:.75rem;font-weight:600;color:#fff;background:linear-gradient(135deg,var(--color-primary-orange),var(--color-primary-red));transition:transform .3s}
      .section-container{max-width:80rem;margin-left:auto;margin-right:auto;padding-left:1rem;padding-right:1rem}
      @media(min-width:640px){.section-container{padding-left:1.5rem;padding-right:1.5rem}}
      @media(min-width:1024px){.section-container{padding-left:2rem;padding-right:2rem}}
      /* Material symbols placeholder to prevent layout shift */
      .material-symbols-outlined{font-family:'Material Symbols Outlined';font-weight:normal;font-style:normal;font-size:24px;line-height:1;letter-spacing:normal;text-transform:none;display:inline-block;white-space:nowrap;word-wrap:normal;direction:ltr;-webkit-font-smoothing:antialiased}
    </style>

    <!-- Early language redirect - runs BEFORE body renders to prevent CLS -->
    <script is:inline>
      (function() {
        // Only redirect on root URL
        if (window.location.pathname !== '/' && window.location.pathname !== '') return;

        // Don't redirect if user explicitly chose a language
        if (localStorage.getItem('lowis_lang_chosen')) return;

        // Check cached country (instant, no fetch needed)
        var cachedCountry = localStorage.getItem('lowis_country');
        var moroccoGroup = ['MA', 'DZ', 'TN'];

        // If we have a cached country and it's not Morocco, redirect based on it
        if (cachedCountry && !moroccoGroup.includes(cachedCountry)) {
          var spanishCountries = ['ES', 'MX', 'AR', 'CO', 'CL', 'PE', 'VE', 'EC', 'BO', 'PY', 'UY', 'CR', 'PA', 'DO', 'GT', 'HN', 'SV', 'NI', 'CU', 'PR'];
          var englishCountries = ['US', 'GB', 'AU', 'NZ', 'IE', 'ZA', 'IN', 'PH', 'SG'];

          if (cachedCountry === 'FR') {
            window.location.replace('/fr/');
          } else if (spanishCountries.includes(cachedCountry)) {
            window.location.replace('/es/');
          } else if (englishCountries.includes(cachedCountry)) {
            window.location.replace('/en/');
          } else {
            // Other countries: use browser language as fallback
            var browserLang = (navigator.language || '').slice(0, 2).toLowerCase();
            if (browserLang === 'es') window.location.replace('/es/');
            else if (browserLang === 'en') window.location.replace('/en/');
            // else stay on root (French)
          }
          return;
        }

        // No cache: use browser language for instant redirect (geo-detection will refine later)
        if (!cachedCountry) {
          var browserLang = (navigator.language || '').slice(0, 2).toLowerCase();
          if (browserLang === 'es') {
            localStorage.setItem('lowis_early_redirect', 'es');
            window.location.replace('/es/');
          } else if (browserLang === 'en') {
            localStorage.setItem('lowis_early_redirect', 'en');
            window.location.replace('/en/');
          }
          // French speakers or unknown: stay on root for geo-detection
        }
      })();
    </script>

    <!-- Google Analytics 4 - Loaded conditionally based on consent AND deferred for performance -->
    <script is:inline>
      // Initialize dataLayer for GA
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}

      // Flag to prevent double loading
      window.lowisGALoaded = false;

      // Function to load GA script and configure (deferred)
      function loadGoogleAnalytics() {
        if (window.lowisGALoaded) return;
        window.lowisGALoaded = true;

        // Defer loading to not block LCP
        function doLoad() {
          var script = document.createElement('script');
          script.async = true;
          script.src = 'https://www.googletagmanager.com/gtag/js?id=G-52G0810T4P';
          document.head.appendChild(script);

          script.onload = function() {
            gtag('js', new Date());
            gtag('config', 'G-52G0810T4P', {
              'anonymize_ip': true
            });
          };
        }

        // Wait for page to be fully interactive before loading GA
        if (document.readyState === 'complete') {
          setTimeout(doLoad, 2500);
        } else {
          window.addEventListener('load', function() {
            setTimeout(doLoad, 2500);
          });
        }
      }

      // Listen for consent event from CookieConsent component
      window.addEventListener('lowis-consent-changed', function(e) {
        if (e.detail && e.detail.analytics) {
          loadGoogleAnalytics();
        }
      });
    </script>

    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "SoftwareApplication",
          "name": "LOWIS",
          "applicationCategory": "HealthApplication",
          "operatingSystem": "Web",
          "inLanguage": ["fr", "en", "es"],
          "areaServed": {
            "@type": "Country",
            "name": "Morocco"
          },
          "offers": {
            "@type": "Offer",
            "price": "199",
            "priceCurrency": "MAD",
            "description": "7-day free trial, then 199 DH/week"
          },
          "aggregateRating": {
            "@type": "AggregateRating",
            "ratingValue": "4.8",
            "ratingCount": "1250"
          }
        },
        {
          "@type": "Organization",
          "name": "LOWIS",
          "url": "https://lowis.app",
          "logo": "https://lowis.app/icons/logo-512.png",
          "areaServed": {
            "@type": "Country",
            "name": "Morocco"
          },
          "address": {
            "@type": "PostalAddress",
            "addressCountry": "MA"
          }
        },
        {
          "@type": "FAQPage",
          "mainEntity": [
            {
              "@type": "Question",
              "name": "Comment fonctionne LOWIS pour la cuisine marocaine?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "LOWIS est votre coach IA personnel qui surveille 40+ indicateurs. Plus de 500 recettes marocaines: tajines, brochettes, poisson grillé, méchoui. Conçu pour la cuisine marocaine, pas adapté après coup."
              }
            },
            {
              "@type": "Question",
              "name": "Perdre entre 1 et 2,5 kg par semaine au Maroc, c'est possible?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Oui, c'est notre objectif garanti. En mangeant intelligemment avec vos recettes marocaines préférées (pas moins, juste mieux combiné), la majorité de nos utilisateurs atteignent ces résultats."
              }
            },
            {
              "@type": "Question",
              "name": "Comment LOWIS s'adapte pendant le Ramadan?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Plans spéciaux optimisés pour le jeûne: répartition idéale ftour/shour, hydratation adaptée, et recommandations pour maintenir votre énergie pendant le mois sacré."
              }
            },
            {
              "@type": "Question",
              "name": "Combien coûte LOWIS au Maroc?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Première semaine offerte sans carte bancaire. Puis 199 DH/semaine. Annulation en 1 clic à tout moment."
              }
            },
            {
              "@type": "Question",
              "name": "Quelle est la différence entre LOWIS et les compteurs de calories?",
              "acceptedAnswer": {
                "@type": "Answer",
                "text": "Les compteurs de calories vous laissent seul avec des chiffres. LOWIS surveille +40 indicateurs (sommeil, stress, cycle, digestion...), s'adapte instantanément comme un coach personnel, et nos nutritionnistes ajustent votre plan chaque semaine."
              }
            }
          ]
        }
      ]
    })} />
  </head>
  <body class="bg-dark-bg text-white font-sans antialiased pb-20 md:pb-0">
    <!-- Geo-detection banner -->
    <GeoBanner />

    <!-- Cookie consent banner (only shown for EU/EEA countries) -->
    <CookieConsent lang={lang} />

    <slot />

    <!-- Sticky CTA for mobile - Starts hidden to prevent CLS during redirects, fades in after page stable -->
    <div id="sticky-cta" class="fixed bottom-0 left-0 right-0 z-50 p-3 bg-dark-bg/95 backdrop-blur-lg border-t border-dark-border md:hidden transition-opacity duration-300" style="contain: layout style; will-change: transform; transform: translateZ(0); opacity: 0;">
      <a href={getSignupUrlWithLang(lang)} class="btn-primary w-full justify-center text-base py-3">
        {lang === 'fr' ? 'Obtenir mon plan personnalisé gratuit' : lang === 'es' ? 'Obtener mi plan personalizado gratis' : 'Get my free personalized plan'}
        <span class="material-symbols-outlined ml-2 text-lg">arrow_forward</span>
      </a>
    </div>

    <!-- Fade in sticky CTA after page is stable (prevents CLS during redirects) -->
    <script is:inline>
      // Show sticky CTA after a short delay to avoid CLS during page load/redirect
      setTimeout(function() {
        var cta = document.getElementById('sticky-cta');
        if (cta) cta.style.opacity = '1';
      }, 500);
    </script>

    <!-- Smooth scroll polyfill for Safari -->
    <script>
      // Check if smooth scroll is supported
      if (!('scrollBehavior' in document.documentElement.style)) {
        // Polyfill would be loaded here if needed
      }
    </script>

    <!-- Global translation protection - deferred to not block render -->
    <script is:inline>
      // Defer translation protection until after page is interactive
      if ('requestIdleCallback' in window) {
        requestIdleCallback(function() {
          initTranslationProtection();
        }, { timeout: 3000 });
      } else {
        setTimeout(initTranslationProtection, 100);
      }

      function initTranslationProtection() {
        var uiSelectors = '.material-symbols-outlined,[class*="material-symbols"],.gradient-text,.header-brand,[data-brand],.category-pill,.phase-badge,.phase-text,[class*="-badge"],[class*="-pill"],[class*="-tag"],[class*="-chip"],.ring-value,.ring-unit,.status-bar,.status-icon,.time,.recipe-calories,.nav-item,.bottom-nav,[class*="stats"],[class*="metric"],.notranslate';

        function protect() {
          document.querySelectorAll(uiSelectors).forEach(function(el) {
            el.setAttribute('translate', 'no');
            el.classList.add('notranslate');
          });
        }

        protect();

        // Mutation observer with debounce
        if (typeof MutationObserver !== 'undefined') {
          var timeout;
          new MutationObserver(function() {
            clearTimeout(timeout);
            timeout = setTimeout(protect, 100);
          }).observe(document.body, { childList: true, subtree: true });
        }
      }
    </script>
  </body>
</html>

<style is:global>
  /* Custom scrollbar for dark theme */
  ::-webkit-scrollbar {
    width: 8px;
    height: 8px;
  }

  ::-webkit-scrollbar-track {
    background: #1a1a1a;
  }

  ::-webkit-scrollbar-thumb {
    background: #3a3a3a;
    border-radius: 4px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: #4a4a4a;
  }

  /* Selection color */
  ::selection {
    background: rgba(249, 115, 22, 0.3);
    color: white;
  }
</style>
