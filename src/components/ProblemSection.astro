---
interface Props {
  t: {
    problem: {
      title: string;
      subtitle: string;
      points: Array<{
        icon: string;
        text: string;
      }>;
      solution: string;
    };
  };
}

const { t } = Astro.props;
---

<section class="py-20 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-dark-surface/50"></div>

  <div class="section-container relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <!-- Title -->
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        {t.problem.title}
      </h2>

      <p class="text-text-secondary text-lg mb-12">
        {t.problem.subtitle}
      </p>

      <!-- Pain points -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-5 mb-12 stagger-children max-w-4xl mx-auto">
        {t.problem.points.map((point) => (
          <div class="group flex items-start gap-4 p-5 sm:p-6 bg-dark-bg/80 border border-red-500/20 rounded-2xl text-left hover:border-red-500/40 transition-all duration-300">
            <div class="w-12 h-12 flex-shrink-0 flex items-center justify-center bg-red-500/10 rounded-xl">
              <span class="material-symbols-outlined text-red-500 text-2xl">
                {point.icon}
              </span>
            </div>
            <p class="text-text-secondary text-base sm:text-lg leading-relaxed pt-2">{point.text}</p>
          </div>
        ))}
      </div>

      <!-- Solution teaser -->
      <div class="inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-primary-orange/10 to-primary-red/10 border border-primary-orange/30 rounded-full">
        <span class="material-symbols-outlined text-primary-orange">lightbulb</span>
        <span class="text-lg font-semibold gradient-text">{t.problem.solution}</span>
      </div>
    </div>
  </div>
</section>
