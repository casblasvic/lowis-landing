// Helper to get optimized Supabase image URL (resized + compressed)
// Note: Supabase doesn't support WebP conversion, only resize/quality
function getOptimizedImageUrl(baseUrl: string, width: number = 200): string {
  // Supabase image transformation: render endpoint with width and quality
  return baseUrl
    .replace('/storage/v1/object/public/', '/storage/v1/render/image/public/')
    + `?width=${width}&height=${width}&resize=cover&quality=80`;
}

// Helper to get recipe name based on current language
