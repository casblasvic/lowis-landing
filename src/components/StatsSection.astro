---
interface Props {
  t: {
    stats: {
      title: string;
      subtitle?: string;
    };
  };
}

const { t } = Astro.props;
---

<section id="stats" class="py-20 relative overflow-hidden">
  <!-- Background with gradient -->
  <div class="absolute inset-0 bg-gradient-to-r from-primary-orange/10 via-primary-red/5 to-primary-orange/10"></div>

  <!-- Decorative elements -->
  <div class="absolute top-0 left-1/4 w-64 h-64 bg-primary-orange/10 rounded-full blur-[100px]"></div>
  <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-primary-red/10 rounded-full blur-[100px]"></div>

  <div class="section-container relative z-10">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Main title -->
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-6">
        <span class="gradient-text">{t.stats.title}</span>
      </h2>

      <!-- Subtitle -->
      {t.stats.subtitle && (
        <p class="text-xl sm:text-2xl text-text-secondary font-medium">
          {t.stats.subtitle}
        </p>
      )}
    </div>
  </div>
</section>
