---
interface Props {
  t: {
    audioProgram: {
      badge: string;
      title: string;
      subtitle: string;
      description: string;
      features: Array<{
        icon: string;
        title: string;
        description: string;
      }>;
      howItWorks: {
        title: string;
        steps: string[];
      };
      cta: string;
    };
  };
}

const { t } = Astro.props;
---

<section id="audio-program" class="py-20 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-dark-bg via-teal-900/10 to-dark-bg"></div>
    <!-- Decorative circles -->
    <div class="absolute top-20 left-10 w-64 h-64 bg-teal-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-80 h-80 bg-primary-orange/10 rounded-full blur-3xl"></div>
  </div>

  <div class="section-container relative z-10">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-500/10 border border-teal-500/20 rounded-full mb-6">
        <span class="material-symbols-outlined text-teal-400">headphones</span>
        <span class="text-teal-400 font-medium">{t.audioProgram.badge}</span>
      </div>

      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        {t.audioProgram.title}
      </h2>

      <p class="text-text-secondary text-lg mb-6">
        {t.audioProgram.subtitle}
      </p>

      <p class="text-text-muted">
        {t.audioProgram.description}
      </p>
    </div>

    <!-- Main content grid -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center mb-16">
      <!-- Audio player mockup - Shows first on mobile -->
      <div class="relative order-1 lg:order-2">
        <div class="audio-player-mockup">
          <!-- Glowing background -->
          <div class="absolute inset-0 bg-gradient-to-br from-teal-500/30 to-primary-orange/30 rounded-2xl blur-xl"></div>

          <!-- Player card - Light theme for contrast -->
          <div class="relative bg-white border border-gray-200 rounded-2xl p-4 sm:p-5 shadow-xl">
            <!-- Album art placeholder -->
            <div class="aspect-square max-w-[140px] mx-auto mb-3 rounded-xl bg-gradient-to-br from-teal-500 to-primary-orange flex items-center justify-center overflow-hidden shadow-lg">
              <div class="text-center text-white p-3">
                <span class="material-symbols-outlined text-3xl mb-1">self_improvement</span>
                <p class="font-semibold text-xs">Session 12</p>
                <p class="text-[10px] opacity-80">Reprogrammation</p>
              </div>
            </div>

            <!-- Track info -->
            <div class="text-center mb-3">
              <h4 class="font-bold text-sm text-gray-900">Lib√©rez-vous des compulsions</h4>
              <p class="text-gray-500 text-xs">Programme LOWIS - Phase D2</p>
            </div>

            <!-- Progress bar -->
            <div class="mb-3">
              <div class="h-1 bg-gray-200 rounded-full overflow-hidden">
                <div class="h-full w-3/5 bg-gradient-to-r from-teal-500 to-primary-orange rounded-full"></div>
              </div>
              <div class="flex justify-between text-[10px] text-gray-400 mt-1">
                <span>8:24</span>
                <span>14:00</span>
              </div>
            </div>

            <!-- Controls -->
            <div class="flex items-center justify-center gap-4">
              <button class="text-gray-400 hover:text-gray-600 transition-colors">
                <span class="material-symbols-outlined text-lg">replay_10</span>
              </button>
              <button class="w-10 h-10 bg-gradient-to-r from-teal-500 to-primary-orange rounded-full flex items-center justify-center hover:scale-105 transition-transform shadow-lg">
                <span class="material-symbols-outlined text-xl text-white">pause</span>
              </button>
              <button class="text-gray-400 hover:text-gray-600 transition-colors">
                <span class="material-symbols-outlined text-lg">forward_10</span>
              </button>
            </div>

            <!-- Playback speed badge -->
            <div class="absolute top-2 right-2 px-1.5 py-0.5 bg-teal-100 rounded-full">
              <span class="text-[9px] text-teal-600 font-medium">1.25x</span>
            </div>

            <!-- Completion badge -->
            <div class="absolute top-2 left-2 flex items-center gap-1 px-1.5 py-0.5 bg-green-100 rounded-full">
              <span class="material-symbols-outlined text-[10px] text-green-600">local_fire_department</span>
              <span class="text-[9px] text-green-600 font-medium">11 jours</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Features - Shows second on mobile -->
      <div class="space-y-4 order-2 lg:order-1">
        {t.audioProgram.features.map((feature, index) => (
          <div
            class="group flex gap-4 p-4 rounded-2xl bg-dark-surface/50 border border-dark-border hover:border-teal-500/50 transition-all duration-300"
          >
            <div class="w-12 h-12 flex items-center justify-center bg-gradient-to-br from-teal-500/20 to-primary-orange/20 rounded-xl shrink-0">
              <span class="material-symbols-outlined text-2xl text-teal-400">{feature.icon}</span>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-1 group-hover:text-teal-400 transition-colors">
                {feature.title}
              </h3>
              <p class="text-text-secondary text-sm leading-relaxed">
                {feature.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- How it works - styled like main HowItWorks but with teal colors -->
    <div class="max-w-4xl mx-auto">
      <h3 class="text-2xl font-bold text-center mb-12">{t.audioProgram.howItWorks.title}</h3>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {t.audioProgram.howItWorks.steps.map((step, index) => (
          <div class="relative text-center">
            <!-- Connector line (hidden on last item) -->
            {index < t.audioProgram.howItWorks.steps.length - 1 && (
              <div class="hidden lg:block absolute top-10 left-1/2 w-full h-[2px] bg-gradient-to-r from-teal-500/50 to-transparent"></div>
            )}

            <!-- Step number with teal gradient -->
            <div class="relative inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-teal-500 to-teal-600 mb-5 shadow-lg">
              <span class="text-3xl font-bold text-white">{index + 1}</span>
              <!-- Glow effect -->
              <div class="absolute inset-0 rounded-full bg-gradient-to-br from-teal-500 to-teal-600 blur-xl opacity-30"></div>
            </div>

            <!-- Content -->
            <p class="text-text-secondary text-sm leading-relaxed">{step}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .audio-player-mockup {
    position: relative;
    max-width: 280px;
    margin: 0 auto;
  }

  @media (max-width: 640px) {
    .audio-player-mockup {
      max-width: 260px;
    }
  }
</style>
