---
interface Props {
  t: {
    audioProgram: {
      badge: string;
      title: string;
      subtitle: string;
      description: string;
      features: Array<{
        icon: string;
        title: string;
        description: string;
      }>;
      howItWorks: {
        title: string;
        steps: string[];
      };
      cta: string;
    };
  };
}

const { t } = Astro.props;
---

<section id="audio-program" class="py-12 md:py-16 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0">
    <div class="absolute inset-0 bg-gradient-to-b from-dark-bg via-teal-900/10 to-dark-bg"></div>
    <!-- Decorative circles -->
    <div class="absolute top-20 left-10 w-64 h-64 bg-teal-500/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-80 h-80 bg-primary-orange/10 rounded-full blur-3xl"></div>
  </div>

  <div class="section-container relative z-10">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-teal-500/10 border border-teal-500/20 rounded-full mb-6">
        <span class="material-symbols-outlined text-teal-400">headphones</span>
        <span class="text-teal-400 font-medium">{t.audioProgram.badge}</span>
      </div>

      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        {t.audioProgram.title}
      </h2>

      <p class="text-text-secondary text-lg mb-6">
        {t.audioProgram.subtitle}
      </p>

      <p class="text-text-muted">
        {t.audioProgram.description}
      </p>
    </div>

    <!-- Main content grid -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center mb-16">
      <!-- Hero Image - Shows first on mobile -->
      <div class="relative order-1 lg:order-2 flex justify-center">
        <!-- Glowing background effects -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
          <div class="w-80 h-80 bg-gradient-to-br from-teal-500/20 to-primary-orange/20 rounded-full blur-3xl"></div>
        </div>

        <!-- Main image container -->
        <div class="relative">
          <img
            src="/audio-meditation.webp"
            alt="Programme audio LOWIS - Méditation et bien-être"
            class="audio-hero-image relative z-10 w-full max-w-md lg:max-w-lg drop-shadow-2xl"
            width="512"
            height="512"
            loading="lazy"
            decoding="async"
            style="aspect-ratio: 1 / 1;"
          />

          <!-- Floating badges -->
          <div class="absolute top-8 -left-4 lg:-left-8 z-20 animate-float-slow">
            <div class="flex items-center gap-2 px-3 py-2 bg-white/95 backdrop-blur-sm rounded-xl shadow-lg border border-gray-100">
              <span class="material-symbols-outlined text-teal-500">headphones</span>
              <span class="text-sm font-medium text-gray-800">10-15 min/jour</span>
            </div>
          </div>

          <div class="absolute bottom-24 -right-4 lg:-right-8 z-20 animate-float">
            <div class="flex items-center gap-2 px-3 py-2 bg-white/95 backdrop-blur-sm rounded-xl shadow-lg border border-gray-100">
              <span class="material-symbols-outlined text-green-500">local_fire_department</span>
              <span class="text-sm font-medium text-gray-800">Streak: 11 jours</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Features - Shows second on mobile -->
      <div class="space-y-4 order-2 lg:order-1">
        {t.audioProgram.features.map((feature, index) => (
          <div
            class="group flex gap-4 p-5 rounded-2xl bg-dark-surface/50 border border-dark-border hover:border-teal-500/50 hover:bg-dark-surface/80 transition-all duration-300"
          >
            <div class="w-14 h-14 flex items-center justify-center bg-gradient-to-br from-teal-500/20 to-primary-orange/20 rounded-xl shrink-0 group-hover:from-teal-500/30 group-hover:to-primary-orange/30 transition-all">
              <span class="material-symbols-outlined text-2xl text-teal-400">{feature.icon}</span>
            </div>
            <div>
              <h3 class="font-semibold text-lg mb-1 group-hover:text-teal-400 transition-colors">
                {feature.title}
              </h3>
              <p class="text-text-secondary text-sm leading-relaxed">
                {feature.description}
              </p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- How it works - styled like main HowItWorks but with teal colors -->
    <div class="max-w-4xl mx-auto">
      <h3 class="text-2xl font-bold text-center mb-12">{t.audioProgram.howItWorks.title}</h3>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {t.audioProgram.howItWorks.steps.map((step, index) => (
          <div class="relative text-center">
            <!-- Connector line (hidden on last item) -->
            {index < t.audioProgram.howItWorks.steps.length - 1 && (
              <div class="hidden lg:block absolute top-10 left-1/2 w-full h-[2px] bg-gradient-to-r from-teal-500/50 to-transparent"></div>
            )}

            <!-- Step number with teal gradient -->
            <div class="relative inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-teal-500 to-teal-600 mb-5 shadow-lg">
              <span class="text-3xl font-bold text-white">{index + 1}</span>
              <!-- Glow effect -->
              <div class="absolute inset-0 rounded-full bg-gradient-to-br from-teal-500 to-teal-600 blur-xl opacity-30"></div>
            </div>

            <!-- Content -->
            <p class="text-text-secondary text-sm leading-relaxed">{step}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .audio-hero-image {
    filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.3));
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes float-slow {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-float-slow {
    animation: float-slow 4s ease-in-out infinite;
    animation-delay: 0.5s;
  }

  @media (max-width: 640px) {
    .audio-hero-image {
      max-width: 320px;
    }
  }
</style>
