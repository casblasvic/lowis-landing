---
/**
 * WhatsIncluded.astro
 *
 * Section explaining what's included in the LOWIS method
 * Inspired by DC Fitness Health - focus on PROCESS, not just features
 * Warm, human tone while highlighting the AI + Human advantage
 */

interface Props {
  t: {
    whatsIncluded: {
      badge: string;
      title: string;
      subtitle: string;
      items: Array<{
        icon: string;
        title: string;
        description: string;
      }>;
    };
  };
}

const { t } = Astro.props;

// Card accent colors - consistent with brand palette
const accentColors = [
  'from-primary-orange to-primary-red',
  'from-green-500 to-emerald-500',
  'from-blue-500 to-cyan-500',
  'from-purple-500 to-pink-500',
  'from-amber-500 to-orange-500',
  'from-teal-500 to-cyan-500',
];
---

<section id="whats-included" class="py-12 md:py-16 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-0 left-0 w-[500px] h-[500px] bg-green-500/5 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-0 right-0 w-[400px] h-[400px] bg-primary-orange/5 rounded-full blur-[80px]"></div>
  </div>

  <div class="section-container relative z-10">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-12">
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-green-500/10 border border-green-500/20 text-green-400 text-sm font-medium mb-6">
        <span class="material-symbols-outlined text-lg">checklist</span>
        {t.whatsIncluded.badge}
      </span>
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        {t.whatsIncluded.title}
      </h2>
      <p class="text-text-secondary text-lg">
        {t.whatsIncluded.subtitle}
      </p>
    </div>

    <!-- 6 cards grid: 1 col mobile, 2 tablet, 3 desktop -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 stagger-children">
      {t.whatsIncluded.items.map((item, index) => (
        <div class="group relative p-6 lg:p-8 bg-dark-surface border border-dark-border rounded-2xl card-hover overflow-hidden">
          <!-- Gradient accent on hover -->
          <div
            class={`absolute inset-0 bg-gradient-to-br ${accentColors[index]} opacity-0 group-hover:opacity-5 transition-opacity duration-300`}
          ></div>

          <div class="relative z-10">
            <!-- Icon -->
            <div
              class={`w-14 h-14 rounded-2xl bg-gradient-to-br ${accentColors[index]} flex items-center justify-center mb-5 shadow-lg`}
            >
              <span class="material-symbols-outlined text-white text-2xl">
                {item.icon}
              </span>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-bold mb-3 group-hover:gradient-text transition-all duration-300">
              {item.title}
            </h3>

            <!-- Description -->
            <p class="text-text-secondary leading-relaxed">
              {item.description}
            </p>
          </div>

          <!-- Corner decoration -->
          <div class="absolute -bottom-10 -right-10 w-32 h-32 bg-gradient-to-br from-white/[0.02] to-transparent rounded-full"></div>
        </div>
      ))}
    </div>
  </div>
</section>
