---
import { SITE_CONFIG } from '../config';

interface Props {
  t: {
    howItWorks: {
      title: string;
      subtitle: string;
      phases: Array<{
        number: string;
        icon: string;
        title: string;
        description: string;
        bullets?: string[];
      }>;
      cycle?: {
        title: string;
        description: string;
      };
      cta: string;
    };
  };
}

const { t } = Astro.props;

// Phase colors for the number badges
const phaseColors = [
  'from-primary-orange to-primary-red',
  'from-blue-500 to-cyan-500',
  'from-purple-500 to-pink-500',
  'from-green-500 to-emerald-500',
];
---

<section id="how-it-works" class="py-12 md:py-16 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-0 w-[600px] h-[600px] bg-primary-orange/5 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-1/4 right-0 w-[500px] h-[500px] bg-blue-500/5 rounded-full blur-[100px]"></div>
  </div>

  <div class="section-container relative z-10">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        {t.howItWorks.title}
      </h2>
      <p class="text-text-secondary text-lg">
        {t.howItWorks.subtitle}
      </p>
    </div>

    <!-- Main content grid -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-16 items-center mb-12">
      <!-- Hero Image - Shows first on mobile -->
      <div class="relative order-1 lg:order-2 flex justify-center">
        <!-- Glowing background effects -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
          <div class="w-72 h-72 bg-gradient-to-br from-primary-orange/20 to-primary-red/20 rounded-full blur-3xl"></div>
        </div>

        <!-- Main image container -->
        <div class="relative">
          <img
            src="/Tajin_poulet_scannes.webp"
            alt="Escaneo inteligente de alimentos - Tajine de pollo con macros y micronutrientes"
            class="scan-hero-image relative z-10 w-full max-w-xs lg:max-w-sm rounded-2xl"
            loading="lazy"
          />

          <!-- Floating badges -->
          <div class="absolute top-4 -left-2 lg:-left-6 z-20 animate-float-slow">
            <div class="flex items-center gap-2 px-3 py-2 bg-white/95 backdrop-blur-sm rounded-xl shadow-lg border border-gray-100">
              <span class="material-symbols-outlined text-primary-orange">photo_camera</span>
              <span class="text-sm font-medium text-gray-800">Esc√°ner inteligente</span>
            </div>
          </div>

          <div class="absolute bottom-8 -right-2 lg:-right-6 z-20 animate-float">
            <div class="flex items-center gap-2 px-3 py-2 bg-white/95 backdrop-blur-sm rounded-xl shadow-lg border border-gray-100">
              <span class="material-symbols-outlined text-green-500">nutrition</span>
              <span class="text-sm font-medium text-gray-800">22 micronutriments</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Timeline Steps - Shows second on mobile -->
      <div class="relative order-2 lg:order-1">
        <!-- Vertical connecting line -->
        <div class="absolute left-6 top-10 bottom-10 w-0.5 bg-gradient-to-b from-primary-orange via-purple-500 to-green-500"></div>

        <div class="space-y-8">
          {t.howItWorks.phases.map((phase, index) => (
            <div class="relative flex gap-4 sm:gap-6">
              <!-- Number circle -->
              <div class="relative z-10 flex-shrink-0">
                <div class={`w-12 h-12 flex items-center justify-center bg-gradient-to-br ${phaseColors[index % phaseColors.length]} rounded-full shadow-lg`}>
                  <span class="text-xl font-bold text-white">{phase.number}</span>
                </div>
              </div>

              <!-- Content -->
              <div class="flex-1 pt-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="material-symbols-outlined text-xl text-text-muted">{phase.icon}</span>
                  <h3 class="font-semibold text-lg">{phase.title}</h3>
                </div>

                <p class="text-text-secondary text-sm leading-relaxed mb-3">
                  {phase.description}
                </p>

                <!-- Bullet points if present -->
                {phase.bullets && phase.bullets.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {phase.bullets.map((bullet) => (
                      <span class="inline-flex items-center gap-1 px-2 py-1 text-xs bg-dark-surface/50 rounded-full text-text-muted">
                        <span class="material-symbols-outlined text-green-500 text-sm">check</span>
                        {bullet}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Cycle visualization -->
    {t.howItWorks.cycle && (
      <div class="max-w-2xl mx-auto text-center p-6 rounded-2xl bg-gradient-to-r from-primary-orange/10 via-purple-500/10 to-green-500/10 border border-dark-border">
        <div class="flex items-center justify-center gap-2 mb-3">
          <span class="material-symbols-outlined text-primary-orange">sync</span>
          <h3 class="font-bold text-lg">{t.howItWorks.cycle.title}</h3>
        </div>
        <p class="text-text-secondary text-sm">
          {t.howItWorks.cycle.description}
        </p>
      </div>
    )}

    <!-- CTA - Hidden on mobile (sticky CTA visible instead) -->
    <div class="hidden md:flex justify-center mt-10">
      <a href={SITE_CONFIG.signupUrl} class="btn-primary text-lg px-8 py-4">
        {t.howItWorks.cta}
        <span class="material-symbols-outlined ml-2">arrow_forward</span>
      </a>
    </div>
  </div>
</section>

<style>
  .scan-hero-image {
    filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.3));
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes float-slow {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-float-slow {
    animation: float-slow 4s ease-in-out infinite;
    animation-delay: 0.5s;
  }

  @media (max-width: 640px) {
    .scan-hero-image {
      max-width: 240px;
    }
  }
</style>
