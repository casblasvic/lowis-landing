---
import { SITE_CONFIG } from '../config';

interface Props {
  t: {
    howItWorks: {
      title: string;
      subtitle: string;
      phases: Array<{
        number: string;
        icon: string;
        title: string;
        description: string;
        bullets?: string[];
      }>;
      cycle?: {
        title: string;
        description: string;
      };
      cta: string;
    };
  };
}

const { t } = Astro.props;

// Phase accent colors
const phaseColors = [
  { bg: 'from-primary-orange/20 to-primary-red/20', icon: 'text-primary-orange', border: 'border-primary-orange/30', number: 'from-primary-orange to-primary-red' },
  { bg: 'from-blue-500/20 to-cyan-500/20', icon: 'text-blue-400', border: 'border-blue-500/30', number: 'from-blue-500 to-cyan-500' },
  { bg: 'from-purple-500/20 to-pink-500/20', icon: 'text-purple-400', border: 'border-purple-500/30', number: 'from-purple-500 to-pink-500' },
  { bg: 'from-green-500/20 to-emerald-500/20', icon: 'text-green-400', border: 'border-green-500/30', number: 'from-green-500 to-emerald-500' },
];
---

<section id="how-it-works" class="py-12 md:py-16 relative overflow-hidden">
  <!-- Background decoration -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-0 w-[600px] h-[600px] bg-primary-orange/5 rounded-full blur-[100px]"></div>
    <div class="absolute bottom-1/4 right-0 w-[500px] h-[500px] bg-blue-500/5 rounded-full blur-[100px]"></div>
  </div>

  <div class="section-container relative z-10">
    <!-- Section header -->
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        {t.howItWorks.title}
      </h2>
      <p class="text-text-secondary text-lg">
        {t.howItWorks.subtitle}
      </p>
    </div>

    <!-- Main content grid -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-start mb-12">
      <!-- Hero Image - Shows first on mobile -->
      <div class="relative order-1 lg:order-2 flex justify-center lg:sticky lg:top-24">
        <!-- Glowing background effects -->
        <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
          <div class="w-72 h-72 bg-gradient-to-br from-primary-orange/20 to-primary-red/20 rounded-full blur-3xl"></div>
        </div>

        <!-- Main image container -->
        <div class="relative">
          <img
            src="/Tajin_poulet_scannes.webp"
            alt="Escaneo inteligente de alimentos - Tajine de pollo con macros y micronutrientes"
            class="scan-hero-image relative z-10 w-full max-w-sm lg:max-w-md rounded-2xl"
            loading="lazy"
          />

          <!-- Floating badges -->
          <div class="absolute top-4 -left-2 lg:-left-6 z-20 animate-float-slow">
            <div class="flex items-center gap-2 px-3 py-2 bg-white/95 backdrop-blur-sm rounded-xl shadow-lg border border-gray-100">
              <span class="material-symbols-outlined text-primary-orange">photo_camera</span>
              <span class="text-sm font-medium text-gray-800">Esc√°ner inteligente</span>
            </div>
          </div>

          <div class="absolute bottom-8 -right-2 lg:-right-6 z-20 animate-float">
            <div class="flex items-center gap-2 px-3 py-2 bg-white/95 backdrop-blur-sm rounded-xl shadow-lg border border-gray-100">
              <span class="material-symbols-outlined text-green-500">nutrition</span>
              <span class="text-sm font-medium text-gray-800">22 micronutriments</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Phases - Shows second on mobile -->
      <div class="space-y-4 order-2 lg:order-1">
        {t.howItWorks.phases.map((phase, index) => (
          <div
            class={`group relative p-5 rounded-2xl bg-dark-surface/50 border ${phaseColors[index % phaseColors.length].border} hover:bg-dark-surface/80 transition-all duration-300`}
          >
            <!-- Phase number badge -->
            <div class={`absolute -top-3 -left-3 w-10 h-10 flex items-center justify-center bg-gradient-to-br ${phaseColors[index % phaseColors.length].number} rounded-full shadow-lg`}>
              <span class="text-lg font-bold text-white">{phase.number}</span>
            </div>

            <div class="flex gap-4 pt-2">
              <!-- Icon -->
              <div class={`w-12 h-12 flex items-center justify-center bg-gradient-to-br ${phaseColors[index % phaseColors.length].bg} rounded-xl shrink-0`}>
                <span class={`material-symbols-outlined text-2xl ${phaseColors[index % phaseColors.length].icon}`}>{phase.icon}</span>
              </div>

              <!-- Content -->
              <div class="flex-1">
                <h3 class="font-semibold text-lg mb-2 group-hover:text-primary-orange transition-colors">
                  {phase.title}
                </h3>
                <p class="text-text-secondary text-sm leading-relaxed mb-3">
                  {phase.description}
                </p>

                <!-- Bullet points if present -->
                {phase.bullets && phase.bullets.length > 0 && (
                  <ul class="space-y-2">
                    {phase.bullets.map((bullet) => (
                      <li class="flex items-start gap-2 text-sm text-text-muted">
                        <span class="material-symbols-outlined text-green-500 text-base mt-0.5">check_circle</span>
                        <span>{bullet}</span>
                      </li>
                    ))}
                  </ul>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Cycle visualization -->
    {t.howItWorks.cycle && (
      <div class="max-w-2xl mx-auto text-center p-6 rounded-2xl bg-gradient-to-r from-primary-orange/10 via-purple-500/10 to-green-500/10 border border-dark-border">
        <div class="flex items-center justify-center gap-2 mb-3">
          <span class="material-symbols-outlined text-primary-orange">sync</span>
          <h3 class="font-bold text-lg">{t.howItWorks.cycle.title}</h3>
        </div>
        <p class="text-text-secondary text-sm">
          {t.howItWorks.cycle.description}
        </p>
      </div>
    )}

    <!-- CTA - Hidden on mobile (sticky CTA visible instead) -->
    <div class="hidden md:flex justify-center mt-10">
      <a href={SITE_CONFIG.signupUrl} class="btn-primary text-lg px-8 py-4">
        {t.howItWorks.cta}
        <span class="material-symbols-outlined ml-2">arrow_forward</span>
      </a>
    </div>
  </div>
</section>

<style>
  .scan-hero-image {
    filter: drop-shadow(0 25px 50px rgba(0, 0, 0, 0.3));
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes float-slow {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-8px);
    }
  }

  .animate-float {
    animation: float 3s ease-in-out infinite;
  }

  .animate-float-slow {
    animation: float-slow 4s ease-in-out infinite;
    animation-delay: 0.5s;
  }

  @media (max-width: 640px) {
    .scan-hero-image {
      max-width: 280px;
    }
  }
</style>
