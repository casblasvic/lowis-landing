  // Get names based on detected country
  function isMoroccoUser(): boolean {
    const country = localStorage.getItem('lowis_country');
    const moroccoGroup = ['MA', 'DZ', 'TN'];
    return country !== null && moroccoGroup.includes(country);
  }

  // Initialize AI messages with localized content
  const lang = detectLanguage();
  const messages = aiMessages[lang];

  // Set initial text content
  document.querySelectorAll('[data-ai-text]').forEach(el => {
    const key = el.getAttribute('data-ai-text') as string;
    if (messages[key]) {
      el.textContent = messages[key].text;
    }
  });

  document.querySelectorAll('[data-ai-subtext]').forEach(el => {
    const key = el.getAttribute('data-ai-subtext') as string;
    if (messages[key]) {
      el.textContent = messages[key].subtext;
    }
  });

  // Rotate AI messages
  const aiMsgs = document.querySelectorAll('.ai-msg');
  let currentMsgIndex = 0;

  function rotateMessage() {
    aiMsgs.forEach(msg => msg.classList.remove('active'));
    currentMsgIndex = (currentMsgIndex + 1) % aiMsgs.length;
    aiMsgs[currentMsgIndex].classList.add('active');
  }

  // Start rotating messages every 4 seconds
  setInterval(rotateMessage, 4000);

  // Handle user name rotation
  const userNameEls = document.querySelectorAll('.user-name') as NodeListOf<HTMLElement>;

  if (userNameEls.length > 0) {
