<script>
  // Get names based on detected country
  // Uses data attributes set on the element for i18n support
  function isMoroccoUser(): boolean {
    const country = localStorage.getItem('lowis_country');
    const moroccoGroup = ['MA', 'DZ', 'TN'];
    return country !== null && moroccoGroup.includes(country);
  }

  const userNameEl = document.querySelector('.user-name') as HTMLElement | null;

  if (userNameEl) {
    // Wait a bit for geo-detection to complete
    setTimeout(() => {
      const isMorocco = isMoroccoUser();

      // Get names from data attributes (set by translations)
      const genericName = userNameEl.getAttribute('data-generic-name') || 'Sophie';
      const moroccoName = userNameEl.getAttribute('data-morocco-name') || 'Rania';

      // Set initial name based on geo
      userNameEl.textContent = isMorocco ? moroccoName : genericName;

      // Get full name lists for rotation
      const genericNames = ['Sophie', 'Marie', 'Emma', 'LÃ©a', 'Julie', 'Thomas', 'Lucas', 'Antoine', 'Hugo', 'Louis'];
      const moroccanNames = ['Rania', 'Fatima', 'Nour', 'Salma', 'Amina', 'Houda', 'Adnan', 'Youssef', 'Karim', 'Omar'];

      const names = isMorocco ? moroccanNames : genericNames;
      let currentIndex = 0;

      setInterval(() => {
        currentIndex = (currentIndex + 1) % names.length;
        userNameEl.textContent = names[currentIndex];
      }, 3000);
    }, 2000);
  }
</script>
