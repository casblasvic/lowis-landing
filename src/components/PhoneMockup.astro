---
interface Props {
  t: {
    demo: {
      aiMessage: string;
      names: string[];
      objectives: {
        calories: string;
        protein: string;
        water: string;
        steps: string;
      };
      phase: string;
      phaseLabel: string;
      recipes: string;
    };
  };
}

const { t } = Astro.props;

// Moroccan recipes with placeholder images
const recipes = [
  { name: 'Tajine Poulet Citron', calories: 320, image: 'https://images.unsplash.com/photo-1541518763669-27fef04b14ea?w=100&h=100&fit=crop' },
  { name: 'Couscous 7 LÃ©gumes', calories: 450, image: 'https://images.unsplash.com/photo-1585937421612-70a008356fbe?w=100&h=100&fit=crop' },
  { name: 'Harira', calories: 180, image: 'https://images.unsplash.com/photo-1547592166-23ac45744acd?w=100&h=100&fit=crop' },
];
---

<div class="phone-mockup-container">
  <!-- iPhone Frame -->
  <div class="phone-frame">
    <!-- Notch -->
    <div class="phone-notch"></div>

    <!-- Screen -->
    <div class="phone-screen">
      <!-- Status bar -->
      <div class="status-bar">
        <span class="time">14:32</span>
        <div class="status-icons">
          <span class="material-symbols-outlined status-icon">signal_cellular_4_bar</span>
          <span class="material-symbols-outlined status-icon">wifi</span>
          <span class="material-symbols-outlined status-icon">battery_full</span>
        </div>
      </div>

      <!-- App header -->
      <div class="app-header">
        <div class="header-left">
          <img src="/lowis-landing/icons/logo-192.png" alt="LOWIS" class="header-logo" />
          <span class="header-brand gradient-text">LOWIS</span>
        </div>
        <div class="phase-badge">
          <span class="phase-text">{t.demo.phase}</span>
        </div>
      </div>

      <!-- AI Message -->
      <div class="ai-message">
        <div class="ai-avatar">
          <span class="material-symbols-outlined ai-icon">smart_toy</span>
        </div>
        <div class="ai-bubble">
          <p class="ai-greeting">
            {t.demo.aiMessage}, <span class="user-name">{t.demo.names[0]}</span>! ðŸŽ‰
          </p>
          <p class="ai-subtext">Vous avez atteint 85% de vos objectifs</p>
        </div>
      </div>

      <!-- Progress rings -->
      <div class="progress-section">
        <div class="progress-ring-container">
          <!-- Calories ring -->
          <div class="progress-ring main">
            <svg viewBox="0 0 36 36" class="ring-svg">
              <path
                class="ring-bg"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <path
                class="ring-progress ring-orange"
                stroke-dasharray="85, 100"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
            </svg>
            <div class="ring-label">
              <span class="ring-value">1,420</span>
              <span class="ring-unit">kcal</span>
            </div>
          </div>

          <!-- Protein ring -->
          <div class="progress-ring small">
            <svg viewBox="0 0 36 36" class="ring-svg">
              <path
                class="ring-bg"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <path
                class="ring-progress ring-blue"
                stroke-dasharray="72, 100"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
            </svg>
            <div class="ring-label small">
              <span class="ring-value">86g</span>
            </div>
          </div>

          <!-- Water ring -->
          <div class="progress-ring small">
            <svg viewBox="0 0 36 36" class="ring-svg">
              <path
                class="ring-bg"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <path
                class="ring-progress ring-cyan"
                stroke-dasharray="60, 100"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
            </svg>
            <div class="ring-label small">
              <span class="ring-value">1.2L</span>
            </div>
          </div>
        </div>

        <div class="progress-labels">
          <span>{t.demo.objectives.calories}</span>
          <span>{t.demo.objectives.protein}</span>
          <span>{t.demo.objectives.water}</span>
        </div>
      </div>

      <!-- Recipes section -->
      <div class="recipes-section">
        <div class="recipes-header">
          <span class="recipes-title">{t.demo.recipes}</span>
          <span class="material-symbols-outlined recipes-arrow">arrow_forward</span>
        </div>

        <div class="recipes-list">
          {recipes.map((recipe) => (
            <div class="recipe-card">
              <img src={recipe.image} alt={recipe.name} class="recipe-image" />
              <div class="recipe-info">
                <span class="recipe-name">{recipe.name}</span>
                <span class="recipe-calories">{recipe.calories} kcal</span>
              </div>
              <span class="material-symbols-outlined recipe-add">add_circle</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Bottom nav -->
      <div class="bottom-nav">
        <div class="nav-item active">
          <span class="material-symbols-outlined">home</span>
        </div>
        <div class="nav-item">
          <span class="material-symbols-outlined">restaurant_menu</span>
        </div>
        <div class="nav-item scan">
          <span class="material-symbols-outlined">photo_camera</span>
        </div>
        <div class="nav-item">
          <span class="material-symbols-outlined">insights</span>
        </div>
        <div class="nav-item">
          <span class="material-symbols-outlined">person</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .phone-mockup-container {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .phone-frame {
    position: relative;
    background-color: #111827;
    border-radius: 3rem;
    padding: 0.5rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    width: 280px;
    height: 580px;
  }

  .phone-frame::before {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: 3rem;
    border: 4px solid #374151;
  }

  .phone-notch {
    position: absolute;
    top: 0.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 6rem;
    height: 1.5rem;
    background-color: #000000;
    border-radius: 9999px;
    z-index: 20;
  }

  .phone-screen {
    position: relative;
    width: 100%;
    height: 100%;
    background-color: #0F0F0F;
    border-radius: 2.5rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .status-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1.5rem 0.25rem;
    font-size: 10px;
    color: white;
  }

  .status-icons {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .status-icon {
    font-size: 12px;
  }

  .app-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 1rem;
  }

  .header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .header-logo {
    height: 1.5rem;
    width: 1.5rem;
    border-radius: 0.25rem;
    object-fit: contain;
  }

  .header-brand {
    font-weight: 700;
    font-size: 14px;
    background: linear-gradient(135deg, #F97316, #DC2626);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .phase-badge {
    padding: 0.125rem 0.5rem;
    background-color: rgba(249, 115, 22, 0.2);
    border-radius: 9999px;
  }

  .phase-text {
    font-size: 10px;
    font-weight: 500;
    color: #F97316;
  }

  .ai-message {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
  }

  .ai-avatar {
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #F97316, #DC2626);
    border-radius: 9999px;
    flex-shrink: 0;
  }

  .ai-icon {
    color: white;
    font-size: 14px;
  }

  .ai-bubble {
    flex: 1;
    background-color: #1A1A1A;
    border-radius: 1rem;
    border-top-left-radius: 0.125rem;
    padding: 0.75rem;
  }

  .ai-greeting {
    font-size: 12px;
    color: white;
    margin-bottom: 0.125rem;
  }

  .user-name {
    font-weight: 600;
    color: #F97316;
  }

  .ai-subtext {
    font-size: 10px;
    color: #737373;
  }

  .progress-section {
    padding: 0.75rem 1rem;
  }

  .progress-ring-container {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    gap: 0.75rem;
  }

  .progress-ring {
    position: relative;
  }

  .progress-ring.main {
    width: 5rem;
    height: 5rem;
  }

  .progress-ring.small {
    width: 3.5rem;
    height: 3.5rem;
  }

  .ring-svg {
    width: 100%;
    height: 100%;
    transform: rotate(-90deg);
  }

  .ring-bg {
    fill: none;
    stroke: rgba(255, 255, 255, 0.1);
    stroke-width: 3;
  }

  .ring-progress {
    fill: none;
    stroke-width: 3;
    stroke-linecap: round;
    transition: stroke-dasharray 1s ease-out;
  }

  .ring-orange {
    stroke: #F97316;
  }

  .ring-blue {
    stroke: #3B82F6;
  }

  .ring-cyan {
    stroke: #06B6D4;
  }

  .ring-label {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .ring-label.small {
    font-size: 12px;
  }

  .ring-value {
    font-size: 14px;
    font-weight: 700;
    color: white;
  }

  .ring-label.small .ring-value {
    font-size: 12px;
  }

  .ring-unit {
    font-size: 8px;
    color: #737373;
  }

  .progress-labels {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 0.5rem;
    font-size: 10px;
    color: #737373;
  }

  .recipes-section {
    flex: 1;
    padding: 0.5rem 1rem;
    overflow: hidden;
  }

  .recipes-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .recipes-title {
    font-size: 12px;
    font-weight: 600;
    color: white;
  }

  .recipes-arrow {
    font-size: 14px;
    color: #737373;
  }

  .recipes-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .recipe-card {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem;
    background-color: #1A1A1A;
    border-radius: 0.75rem;
  }

  .recipe-image {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 0.5rem;
    object-fit: cover;
  }

  .recipe-info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .recipe-name {
    font-size: 11px;
    font-weight: 500;
    color: white;
  }

  .recipe-calories {
    font-size: 9px;
    color: #737373;
  }

  .recipe-add {
    font-size: 18px;
    color: #F97316;
  }

  .bottom-nav {
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0.75rem 1rem;
    background-color: rgba(26, 26, 26, 0.8);
    backdrop-filter: blur(12px);
    border-top: 1px solid #2A2A2A;
  }

  .nav-item {
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 9999px;
    color: #737373;
  }

  .nav-item.active {
    color: #F97316;
  }

  .nav-item.scan {
    background: linear-gradient(135deg, #F97316, #DC2626);
    color: white;
    margin-top: -1rem;
    box-shadow: 0 10px 15px -3px rgba(249, 115, 22, 0.3);
  }

  .nav-item .material-symbols-outlined {
    font-size: 20px;
  }
</style>

<script>
  // Rotate user names
  const names = ['Rania', 'Fatima', 'Nour', 'Salma', 'Amina', 'Houda', 'Adnan', 'Youssef', 'Karim', 'Omar'];
  let currentIndex = 0;

  const userNameEl = document.querySelector('.user-name');

  if (userNameEl) {
    setInterval(() => {
      currentIndex = (currentIndex + 1) % names.length;
      userNameEl.textContent = names[currentIndex];
    }, 3000);
  }
</script>
