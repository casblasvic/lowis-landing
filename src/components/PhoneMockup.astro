---
import Logo from './ui/Logo.astro';

interface Props {
  t: {
    demo: {
      aiMessage: string;
      names: string[];
      objectives: {
        calories: string;
        protein: string;
        water: string;
        steps: string;
      };
      phase: string;
      phaseLabel: string;
      recipes: string;
    };
  };
}

const { t } = Astro.props;

// Moroccan recipes with placeholder images
const recipes = [
  { name: 'Tajine Poulet Citron', calories: 320, image: 'https://images.unsplash.com/photo-1541518763669-27fef04b14ea?w=100&h=100&fit=crop' },
  { name: 'Couscous 7 LÃ©gumes', calories: 450, image: 'https://images.unsplash.com/photo-1585937421612-70a008356fbe?w=100&h=100&fit=crop' },
  { name: 'Harira', calories: 180, image: 'https://images.unsplash.com/photo-1547592166-23ac45744acd?w=100&h=100&fit=crop' },
];
---

<div class="phone-mockup-container">
  <!-- iPhone Frame -->
  <div class="phone-frame">
    <!-- Notch -->
    <div class="phone-notch"></div>

    <!-- Screen -->
    <div class="phone-screen">
      <!-- Status bar -->
      <div class="status-bar">
        <span class="time">14:32</span>
        <div class="status-icons">
          <span class="material-symbols-outlined text-xs">signal_cellular_4_bar</span>
          <span class="material-symbols-outlined text-xs">wifi</span>
          <span class="material-symbols-outlined text-xs">battery_full</span>
        </div>
      </div>

      <!-- App header -->
      <div class="app-header">
        <div class="flex items-center gap-2">
          <Logo class="h-6 w-6" />
          <span class="font-bold text-sm gradient-text">LOWIS</span>
        </div>
        <div class="phase-badge">
          <span class="text-[10px] font-medium text-primary-orange">{t.demo.phase}</span>
        </div>
      </div>

      <!-- AI Message -->
      <div class="ai-message">
        <div class="ai-avatar">
          <span class="material-symbols-outlined text-white text-sm">smart_toy</span>
        </div>
        <div class="ai-bubble">
          <p class="ai-greeting">
            {t.demo.aiMessage}, <span class="user-name font-semibold text-primary-orange">Rania</span>! ðŸŽ‰
          </p>
          <p class="ai-subtext">Vous avez atteint 85% de vos objectifs</p>
        </div>
      </div>

      <!-- Progress rings -->
      <div class="progress-section">
        <div class="progress-ring-container">
          <!-- Calories ring -->
          <div class="progress-ring" data-progress="85">
            <svg viewBox="0 0 36 36" class="ring-svg">
              <path
                class="ring-bg"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <path
                class="ring-progress ring-orange"
                stroke-dasharray="85, 100"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
            </svg>
            <div class="ring-label">
              <span class="ring-value">1,420</span>
              <span class="ring-unit">kcal</span>
            </div>
          </div>

          <!-- Protein ring -->
          <div class="progress-ring small" data-progress="72">
            <svg viewBox="0 0 36 36" class="ring-svg">
              <path
                class="ring-bg"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <path
                class="ring-progress ring-blue"
                stroke-dasharray="72, 100"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
            </svg>
            <div class="ring-label small">
              <span class="ring-value">86g</span>
            </div>
          </div>

          <!-- Water ring -->
          <div class="progress-ring small" data-progress="60">
            <svg viewBox="0 0 36 36" class="ring-svg">
              <path
                class="ring-bg"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
              <path
                class="ring-progress ring-cyan"
                stroke-dasharray="60, 100"
                d="M18 2.0845 a 15.9155 15.9155 0 0 1 0 31.831 a 15.9155 15.9155 0 0 1 0 -31.831"
              />
            </svg>
            <div class="ring-label small">
              <span class="ring-value">1.2L</span>
            </div>
          </div>
        </div>

        <div class="progress-labels">
          <span>{t.demo.objectives.calories}</span>
          <span>{t.demo.objectives.protein}</span>
          <span>{t.demo.objectives.water}</span>
        </div>
      </div>

      <!-- Recipes section -->
      <div class="recipes-section">
        <div class="recipes-header">
          <span class="recipes-title">{t.demo.recipes}</span>
          <span class="material-symbols-outlined text-text-muted text-sm">arrow_forward</span>
        </div>

        <div class="recipes-list">
          {recipes.map((recipe) => (
            <div class="recipe-card">
              <img src={recipe.image} alt={recipe.name} class="recipe-image" />
              <div class="recipe-info">
                <span class="recipe-name">{recipe.name}</span>
                <span class="recipe-calories">{recipe.calories} kcal</span>
              </div>
              <span class="material-symbols-outlined text-primary-orange text-lg">add_circle</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Bottom nav -->
      <div class="bottom-nav">
        <div class="nav-item active">
          <span class="material-symbols-outlined">home</span>
        </div>
        <div class="nav-item">
          <span class="material-symbols-outlined">restaurant_menu</span>
        </div>
        <div class="nav-item scan">
          <span class="material-symbols-outlined">photo_camera</span>
        </div>
        <div class="nav-item">
          <span class="material-symbols-outlined">insights</span>
        </div>
        <div class="nav-item">
          <span class="material-symbols-outlined">person</span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .phone-mockup-container {
    @apply relative flex justify-center items-center;
  }

  .phone-frame {
    @apply relative bg-gray-900 rounded-[3rem] p-2 shadow-2xl;
    width: 280px;
    height: 580px;
  }

  .phone-frame::before {
    content: '';
    @apply absolute inset-0 rounded-[3rem] border-4 border-gray-700;
  }

  .phone-notch {
    @apply absolute top-2 left-1/2 -translate-x-1/2 w-24 h-6 bg-black rounded-full z-20;
  }

  .phone-screen {
    @apply relative w-full h-full bg-dark-bg rounded-[2.5rem] overflow-hidden flex flex-col;
  }

  .status-bar {
    @apply flex justify-between items-center px-6 pt-2 pb-1 text-[10px] text-white;
  }

  .status-icons {
    @apply flex items-center gap-1;
  }

  .app-header {
    @apply flex justify-between items-center px-4 py-2;
  }

  .phase-badge {
    @apply px-2 py-0.5 bg-primary-orange/20 rounded-full;
  }

  .ai-message {
    @apply flex items-start gap-2 px-4 py-2;
  }

  .ai-avatar {
    @apply w-8 h-8 flex items-center justify-center bg-gradient-to-br from-primary-orange to-primary-red rounded-full flex-shrink-0;
  }

  .ai-bubble {
    @apply flex-1 bg-dark-surface rounded-2xl rounded-tl-sm p-3;
  }

  .ai-greeting {
    @apply text-xs text-white mb-0.5;
  }

  .ai-subtext {
    @apply text-[10px] text-text-muted;
  }

  .progress-section {
    @apply px-4 py-3;
  }

  .progress-ring-container {
    @apply flex justify-center items-end gap-3;
  }

  .progress-ring {
    @apply relative w-20 h-20;
  }

  .progress-ring.small {
    @apply w-14 h-14;
  }

  .ring-svg {
    @apply w-full h-full -rotate-90;
  }

  .ring-bg {
    fill: none;
    stroke: rgba(255, 255, 255, 0.1);
    stroke-width: 3;
  }

  .ring-progress {
    fill: none;
    stroke-width: 3;
    stroke-linecap: round;
    transition: stroke-dasharray 1s ease-out;
  }

  .ring-orange {
    stroke: #F97316;
  }

  .ring-blue {
    stroke: #3B82F6;
  }

  .ring-cyan {
    stroke: #06B6D4;
  }

  .ring-label {
    @apply absolute inset-0 flex flex-col items-center justify-center;
  }

  .ring-label.small {
    @apply text-xs;
  }

  .ring-value {
    @apply text-sm font-bold text-white;
  }

  .ring-label.small .ring-value {
    @apply text-xs;
  }

  .ring-unit {
    @apply text-[8px] text-text-muted;
  }

  .progress-labels {
    @apply flex justify-center gap-6 mt-2 text-[10px] text-text-muted;
  }

  .recipes-section {
    @apply flex-1 px-4 py-2 overflow-hidden;
  }

  .recipes-header {
    @apply flex justify-between items-center mb-2;
  }

  .recipes-title {
    @apply text-xs font-semibold text-white;
  }

  .recipes-list {
    @apply space-y-2;
  }

  .recipe-card {
    @apply flex items-center gap-2 p-2 bg-dark-surface rounded-xl;
  }

  .recipe-image {
    @apply w-10 h-10 rounded-lg object-cover;
  }

  .recipe-info {
    @apply flex-1 flex flex-col;
  }

  .recipe-name {
    @apply text-[11px] font-medium text-white;
  }

  .recipe-calories {
    @apply text-[9px] text-text-muted;
  }

  .bottom-nav {
    @apply flex justify-around items-center px-4 py-3 bg-dark-surface/80 backdrop-blur border-t border-dark-border;
  }

  .nav-item {
    @apply w-10 h-10 flex items-center justify-center rounded-full text-text-muted;
  }

  .nav-item.active {
    @apply text-primary-orange;
  }

  .nav-item.scan {
    @apply bg-gradient-to-br from-primary-orange to-primary-red text-white -mt-4 shadow-lg shadow-primary-orange/30;
  }

  .nav-item .material-symbols-outlined {
    @apply text-xl;
  }
</style>

<script>
  // Rotate user names
  const names = ['Rania', 'Fatima', 'Nour', 'Salma', 'Amina', 'Houda', 'Adnan', 'Youssef', 'Karim', 'Omar'];
  let currentIndex = 0;

  const userNameEl = document.querySelector('.user-name');

  if (userNameEl) {
    setInterval(() => {
      currentIndex = (currentIndex + 1) % names.length;
      userNameEl.textContent = names[currentIndex];
    }, 3000);
  }
</script>
