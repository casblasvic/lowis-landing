---
interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;
---

<svg
  class={className}
  viewBox="0 0 512 512"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
>
  <defs>
    <linearGradient id="logoGradient" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#F97316" />
      <stop offset="100%" style="stop-color:#DC2626" />
    </linearGradient>
    <linearGradient id="tapeGrad" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#FCD34D" />
      <stop offset="50%" style="stop-color:#EAB308" />
      <stop offset="100%" style="stop-color:#CA8A04" />
    </linearGradient>
  </defs>

  <!-- Background -->
  <rect x="0" y="0" width="512" height="512" rx="96" fill="url(#logoGradient)" />

  <!-- LOWIS Text -->
  <text
    x="256"
    y="200"
    font-family="Arial Black, Arial, sans-serif"
    font-size="90"
    font-weight="900"
    fill="white"
    text-anchor="middle"
    style="filter: drop-shadow(2px 4px 4px rgba(0,0,0,0.3))"
  >
    LOWIS
  </text>

  <!-- Measuring Tape -->
  <g transform="translate(90, 240)">
    <path
      d="M0,35 Q50,15 120,30 Q190,45 260,25 Q310,10 330,35 L330,65 Q310,40 260,55 Q190,75 120,60 Q50,45 0,65 Z"
      fill="url(#tapeGrad)"
      stroke="#B45309"
      stroke-width="2"
    />
    <g fill="#1F2937" font-family="Arial" font-size="14" font-weight="bold">
      <line x1="40" y1="30" x2="40" y2="50" stroke="#1F2937" stroke-width="2" />
      <text x="40" y="67" text-anchor="middle">1</text>
      <line x1="100" y1="35" x2="100" y2="55" stroke="#1F2937" stroke-width="2" />
      <text x="100" y="72" text-anchor="middle">2</text>
      <line x1="160" y1="40" x2="160" y2="60" stroke="#1F2937" stroke-width="2" />
      <text x="160" y="77" text-anchor="middle">3</text>
      <line x1="220" y1="35" x2="220" y2="55" stroke="#1F2937" stroke-width="2" />
      <text x="220" y="72" text-anchor="middle">4</text>
      <line x1="280" y1="28" x2="280" y2="48" stroke="#1F2937" stroke-width="2" />
      <text x="280" y="65" text-anchor="middle">5</text>
    </g>
    <ellipse cx="340" cy="70" rx="25" ry="40" fill="url(#tapeGrad)" stroke="#B45309" stroke-width="2" />
    <ellipse cx="340" cy="70" rx="12" ry="20" fill="#FEF3C7" />
  </g>
</svg>
