---
import { getSignupUrlWithLang } from '../config';
import type { Language } from '../i18n';

interface Props {
  t: {
    pricing: {
      title: string;
      subtitle: string;
      trialBanner: {
        title: string;
        subtitle: string;
      };
      trustBadges: {
        noCard: string;
        cancel: string;
        secure: string;
      };
      packPlan: {
        name: string;
        badge: string;
        trialPrice: string;
        price: string;
        period: string;
        trialText: string;
        priceNote: string;
        weightLossClaim: string;
        description: string;
        cta: string;
      };
      featuresTitle: string;
      featuresSubtitle: string;
      features: string[];
    };
  };
  lang: Language;
}

const { t, lang } = Astro.props;
---

<section id="pricing" class="py-12 md:py-16 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-dark-surface/30"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary-orange/5 rounded-full blur-[100px]"></div>

  <div class="section-container relative z-10">
    <!-- Section header -->
    <div class="text-center max-w-2xl mx-auto mb-8">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        {t.pricing.title}
      </h2>
      <p class="text-text-secondary text-lg">
        {t.pricing.subtitle}
      </p>
    </div>

    <!-- FREE TRIAL Banner -->
    <div class="max-w-2xl mx-auto mb-10">
      <div class="bg-gradient-to-r from-green-500/20 to-emerald-500/20 border-2 border-green-500/50 rounded-2xl p-6 text-center">
        <div class="flex items-center justify-center gap-3 mb-2">
          <span class="material-symbols-outlined text-green-400 text-3xl">celebration</span>
          <h3 class="text-2xl sm:text-3xl font-bold text-green-400">{t.pricing.trialBanner.title}</h3>
          <span class="material-symbols-outlined text-green-400 text-3xl">celebration</span>
        </div>
        <p class="text-text-secondary">{t.pricing.trialBanner.subtitle}</p>
      </div>
    </div>

    <!-- Single Pricing Card - 6 Week Program -->
    <div class="max-w-lg mx-auto">
      <!-- Pack Plan Card -->
      <div class="relative p-6 lg:p-8 bg-dark-surface border-2 border-primary-orange rounded-3xl">
        <!-- Recommended badge -->
        <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-20">
          <div class="px-6 py-2.5 bg-gradient-to-r from-primary-orange to-primary-red text-white text-sm font-bold rounded-full shadow-lg whitespace-nowrap">
            {t.pricing.packPlan.badge}
          </div>
        </div>

        <!-- Glow effect -->
        <div class="absolute -top-20 -right-20 w-40 h-40 bg-primary-orange/20 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-primary-red/20 rounded-full blur-3xl"></div>

        <div class="relative z-10 pt-4">
          <!-- Plan name -->
          <div class="text-center mb-6">
            <h3 class="text-xl font-bold gradient-text mb-4">{t.pricing.packPlan.name}</h3>

            <!-- Trial Price - BIG -->
            <div class="mb-1">
              <span class="text-5xl sm:text-6xl font-bold text-green-400">{t.pricing.packPlan.trialPrice}</span>
            </div>
            <p class="text-green-400 font-semibold text-lg mb-3">
              {t.pricing.packPlan.trialText}
            </p>

            <!-- Price after trial -->
            <p class="text-text-muted text-sm mb-2">
              {t.pricing.packPlan.priceNote}
            </p>

            <!-- Weight Loss Claim -->
            <div class="bg-primary-orange/10 border border-primary-orange/30 rounded-lg px-3 py-2 mb-3">
              <p class="text-primary-orange font-semibold text-sm">
                {t.pricing.packPlan.weightLossClaim}
              </p>
            </div>

            <!-- Description -->
            <p class="text-text-secondary text-xs leading-relaxed">
              {t.pricing.packPlan.description}
            </p>
          </div>

          <!-- CTA Button -->
          <a href={getSignupUrlWithLang(lang)} class="btn-primary w-full justify-center text-lg py-3">
            {t.pricing.packPlan.cta}
            <span class="material-symbols-outlined ml-2">arrow_forward</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Features List (shared) -->
    <div class="max-w-3xl mx-auto mt-10">
      <div class="bg-dark-surface/50 border border-dark-border rounded-2xl p-6">
        <h4 class="text-center text-white font-semibold mb-1">{t.pricing.featuresTitle}</h4>
        <p class="text-center text-text-muted text-sm mb-5">{t.pricing.featuresSubtitle}</p>
        <ul class="grid sm:grid-cols-2 gap-3">
          {t.pricing.features.map((feature) => (
            <li class="flex items-start gap-2">
              <span class="material-symbols-outlined text-green-400 text-lg mt-0.5">check_circle</span>
              <span class="text-text-secondary text-sm">{feature}</span>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Trust badges -->
    <div class="mt-10 flex flex-wrap justify-center items-center gap-6 text-text-secondary text-sm">
      <div class="flex items-center gap-2">
        <span class="material-symbols-outlined text-lg text-green-400">credit_card_off</span>
        <span>{t.pricing.trustBadges.noCard}</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="material-symbols-outlined text-lg text-green-400">cancel</span>
        <span>{t.pricing.trustBadges.cancel}</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="material-symbols-outlined text-lg text-green-400">lock</span>
        <span>{t.pricing.trustBadges.secure}</span>
      </div>
    </div>
  </div>
</section>
