---
import { SITE_CONFIG } from '../config';

interface Props {
  t: {
    pricing: {
      title: string;
      subtitle: string;
      premium: {
        name: string;
        badge: string;
        price: string;
        priceAfter: string;
        period: string;
        trialText: string;
        afterTrialText: string;
        features: string[];
        cta: string;
        popular: boolean;
      };
    };
  };
}

const { t } = Astro.props;
---

<section id="pricing" class="py-20 relative overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0 bg-dark-surface/30"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-primary-orange/5 rounded-full blur-[100px]"></div>

  <div class="section-container relative z-10">
    <!-- Section header -->
    <div class="text-center max-w-2xl mx-auto mb-12">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        {t.pricing.title}
      </h2>
      <p class="text-text-secondary text-lg">
        {t.pricing.subtitle}
      </p>
    </div>

    <!-- Single Premium Card -->
    <div class="max-w-md mx-auto pt-6">
      <div class="relative p-8 lg:p-10 bg-dark-surface border-2 border-primary-orange rounded-3xl">
        <!-- Trial badge - positioned above the card -->
        <div class="absolute -top-4 left-1/2 -translate-x-1/2 z-20">
          <div class="px-6 py-2.5 bg-gradient-to-r from-primary-orange to-primary-red text-white text-sm font-bold rounded-full shadow-lg whitespace-nowrap">
            {t.pricing.premium.badge}
          </div>
        </div>

        <!-- Glow effect -->
        <div class="absolute -top-20 -right-20 w-40 h-40 bg-primary-orange/20 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-primary-red/20 rounded-full blur-3xl"></div>

        <div class="relative z-10 pt-4">
          <!-- Plan name -->
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold gradient-text mb-4">{t.pricing.premium.name}</h3>

            <!-- Trial price -->
            <div class="mb-2">
              <span class="text-5xl sm:text-6xl font-bold">{t.pricing.premium.price}</span>
              <span class="text-text-secondary text-lg ml-1">{t.pricing.premium.period}</span>
            </div>

            <!-- Trial text -->
            <p class="text-primary-orange font-medium text-lg mb-1">
              {t.pricing.premium.trialText}
            </p>

            <!-- After trial text -->
            <p class="text-text-muted text-sm">
              {t.pricing.premium.afterTrialText}
            </p>
          </div>

          <!-- Divider -->
          <div class="w-full h-px bg-gradient-to-r from-transparent via-dark-border to-transparent my-6"></div>

          <!-- Features -->
          <ul class="space-y-4 mb-8">
            {t.pricing.premium.features.map((feature) => (
              <li class="flex items-start gap-3">
                <span class="material-symbols-outlined text-green-400 text-lg mt-0.5">check_circle</span>
                <span class="text-text-primary">{feature}</span>
              </li>
            ))}
          </ul>

          <!-- CTA Button -->
          <a href={SITE_CONFIG.signupUrl} class="btn-primary w-full justify-center text-lg py-4">
            {t.pricing.premium.cta}
            <span class="material-symbols-outlined ml-2">arrow_forward</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Trust badges -->
    <div class="mt-12 flex flex-wrap justify-center items-center gap-6 text-text-muted text-sm">
      <div class="flex items-center gap-2">
        <span class="material-symbols-outlined text-lg text-green-400">credit_card_off</span>
        <span>Sans carte bancaire</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="material-symbols-outlined text-lg text-green-400">cancel</span>
        <span>Annulation en 1 clic</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="material-symbols-outlined text-lg text-green-400">lock</span>
        <span>Paiement sécurisé</span>
      </div>
    </div>
  </div>
</section>
