---
import Logo from './ui/Logo.astro';
import PhoneMockup from './PhoneMockup.astro';

interface Props {
  t: {
    hero: {
      badge: string;
      title: string;
      titleHighlight: string;
      subtitle: string;
      cta: string;
      ctaSecondary: string;
      noCard: string;
      users: string;
    };
    demo: {
      aiMessage: string;
      names: string[];
      objectives: {
        calories: string;
        protein: string;
        water: string;
        steps: string;
      };
      phase: string;
      phaseLabel: string;
      recipes: string;
    };
  };
}

const { t } = Astro.props;
---

<section class="relative min-h-screen flex items-center pt-20 overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Gradient orbs -->
    <div class="absolute top-1/4 -left-32 w-96 h-96 bg-primary-orange/20 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-1/4 -right-32 w-96 h-96 bg-primary-red/20 rounded-full blur-[120px]"></div>

    <!-- Grid pattern -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:64px_64px]"></div>
  </div>

  <div class="section-container relative z-10">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Left: Text Content -->
      <div class="text-center lg:text-left">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-dark-surface border border-dark-border rounded-full px-4 py-2 mb-6 animate-fade-in-up">
          <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
          <span class="text-sm text-text-secondary">{t.hero.badge}</span>
        </div>

        <!-- Logo + Title -->
        <div class="flex items-center gap-4 justify-center lg:justify-start mb-4 animate-fade-in-up">
          <Logo class="h-16 w-16 sm:h-20 sm:w-20" />
          <span class="text-4xl sm:text-5xl font-bold gradient-text">LOWIS</span>
        </div>

        <!-- Title -->
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold leading-tight mb-6 animate-fade-in-up" style="animation-delay: 0.1s">
          {t.hero.title}
          <br />
          <span class="gradient-text">{t.hero.titleHighlight}</span>
        </h1>

        <!-- Subtitle -->
        <p class="text-lg sm:text-xl text-text-secondary max-w-xl mx-auto lg:mx-0 mb-8 animate-fade-in-up" style="animation-delay: 0.2s">
          {t.hero.subtitle}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-6 animate-fade-in-up" style="animation-delay: 0.3s">
          <a href="#pricing" class="btn-primary text-lg px-8 py-4 animate-pulse-glow">
            {t.hero.cta}
            <span class="material-symbols-outlined ml-2">arrow_forward</span>
          </a>
          <a href="#features" class="btn-secondary text-lg px-8 py-4">
            <span class="material-symbols-outlined mr-2">play_circle</span>
            {t.hero.ctaSecondary}
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="flex flex-col sm:flex-row items-center gap-4 justify-center lg:justify-start text-text-muted animate-fade-in-up" style="animation-delay: 0.4s">
          <div class="flex items-center gap-2">
            <span class="material-symbols-outlined text-green-500">check_circle</span>
            <span class="text-sm">{t.hero.noCard}</span>
          </div>
          <div class="hidden sm:block w-1 h-1 bg-text-muted rounded-full"></div>
          <div class="flex items-center gap-2">
            <!-- User avatars -->
            <div class="flex -space-x-2">
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-primary-orange to-primary-red flex items-center justify-center text-xs font-bold">R</div>
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-500 flex items-center justify-center text-xs font-bold">F</div>
              <div class="w-8 h-8 rounded-full bg-gradient-to-br from-green-500 to-teal-500 flex items-center justify-center text-xs font-bold">A</div>
            </div>
            <span class="text-sm">
              <span class="text-white font-semibold">1,250+</span> {t.hero.users}
            </span>
          </div>
        </div>
      </div>

      <!-- Right: Phone Mockup -->
      <div class="relative flex justify-center lg:justify-end animate-fade-in-up" style="animation-delay: 0.3s">
        <div class="animate-float">
          <PhoneMockup t={t} />
        </div>

        <!-- Decorative elements -->
        <div class="absolute -top-8 -right-8 w-32 h-32 bg-primary-orange/20 rounded-full blur-3xl"></div>
        <div class="absolute -bottom-8 -left-8 w-24 h-24 bg-primary-red/20 rounded-full blur-3xl"></div>
      </div>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 animate-bounce">
    <span class="text-text-muted text-xs">Scroll</span>
    <span class="material-symbols-outlined text-text-muted">keyboard_arrow_down</span>
  </div>
</section>
